<Window x:Class="TabPaint.Windows.FilterStrengthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="{DynamicResource L_Filter_Strength_Title}" 
        Height="220" Width="400" MinHeight="190" MinWidth="240"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize" 
        ShowInTaskbar="False"
        WindowStyle="None"
        AllowsTransparency="False"
        Background="Transparent"
        FontFamily="Segoe UI Variable, Segoe UI, Microsoft YaHei UI">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Resources/SubWindowStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0" ResizeBorderThickness="6" GlassFrameThickness="-1" CornerRadius="0" UseAeroCaptionButtons="False"/>
    </WindowChrome.WindowChrome>

    <Grid x:Name="RootGrid" 
      Background="Transparent" 
      MouseDown="RootGrid_MouseDown" 
      Focusable="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="32"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>


                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="32"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

            <Border Grid.Row="0" BorderThickness="0,0,0,1" Background="Transparent"  MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Image Grid.Column="0" Source="pack://application:,,,/Resources/TabPaint.ico" 
                        Width="20" Height="20" Margin="12,0,8,0" 
                        RenderOptions.BitmapScalingMode="HighQuality"/>

                            <TextBlock Grid.Column="1" x:Name="TitleTextBlock" Text="{DynamicResource L_Filter_Strength_Title}" 
                            VerticalAlignment="Center" Foreground="{DynamicResource TextSecondaryBrush}" FontSize="12"/>

                            <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Top">

                                <Button Width="48" Height="30" ToolTip="{DynamicResource L_TitleBar_Close}" Click="OnCloseClick" Style="{StaticResource WindowCloseButtonStyle}">
                                    <Viewbox Width="10" Height="10">
                                        <Path Stroke="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}" 
                           StrokeThickness="1" 
                           Data="M0,0 L12,12 M12,0 L0,12"/>
                                    </Viewbox>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
       

        <!-- 内容区域 -->
        <Grid Grid.Row="1" Margin="40,10">

                <Grid VerticalAlignment="Center">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- 强度数值显示和输入 -->
                    <Grid Grid.Row="0" Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- 调色板/滑块图标 -->
                        <Path x:Name="HeaderIcon" Data="M12,15.5A3.5,3.5 0 0,1 8.5,12A3.5,3.5 0 0,1 12,8.5A3.5,3.5 0 0,1 15.5,12A3.5,3.5 0 0,1 12,15.5M19.43,12.97C19.47,12.65 19.5,12.33 19.5,12C19.5,11.67 19.47,11.34 19.43,11L21.54,9.37C21.73,9.22 21.78,8.95 21.66,8.73L19.66,5.27C19.54,5.05 19.27,4.97 19.05,5.05L16.56,6.05C16.04,5.66 15.47,5.34 14.85,5.08L14.47,2.42C14.43,2.18 14.22,2 13.97,2H9.97C9.72,2 9.51,2.18 9.47,2.42L9.09,5.08C8.47,5.34 7.9,5.66 7.38,6.05L4.89,5.05C4.67,4.97 4.4,5.05 4.28,5.27L2.28,8.73C2.16,8.95 2.21,9.22 2.4,9.37L4.51,11C4.47,11.34 4.44,11.67 4.44,12C4.44,12.33 4.47,12.65 4.51,12.97L2.4,14.63C2.21,14.78 2.16,15.05 2.28,15.27L4.28,18.73C4.4,18.95 4.67,19.03 4.89,18.95L7.38,17.95C7.9,18.34 8.47,18.66 9.09,18.92L9.47,21.58C9.51,21.82 9.72,22 9.97,22H13.97C14.22,22 14.43,21.82 14.47,21.58L14.85,18.92C15.47,18.66 16.04,18.34 16.56,17.95L19.05,18.95C19.27,19.03 19.54,18.95 19.66,18.73L21.66,15.27C21.78,15.05 21.73,14.78 21.54,14.63L19.43,12.97Z" 
                              Fill="{DynamicResource SystemAccentBrush}" 
                              Width="18" Height="18" Stretch="Uniform" Margin="0,0,12,0" 
                              VerticalAlignment="Center"/>

                        <TextBlock Grid.Column="1" Text="{DynamicResource L_Dialog_Strength}" 
                                   Style="{StaticResource LabelStyle}"
                                   FontSize="14" FontWeight="SemiBold"/>

                        <TextBox x:Name="ValueTextBox" Grid.Column="2" Width="64" 
                                 Style="{StaticResource ModernTextBoxStyle}"
                                 FontSize="14" FontWeight="Bold"
                                 PreviewTextInput="NumberValidationTextBox"
                                 TextChanged="ValueTextBox_TextChanged"/>
                    </Grid>

                    <!-- 滑块交互区域 -->
                    <Slider x:Name="StrengthSlider" Grid.Row="1"
                            Style="{StaticResource Win11HorizontalSliderStyle}"
                            IsSnapToTickEnabled="True" 
                            TickFrequency="1"
                            Height="32"
                            VerticalAlignment="Center"
                            ValueChanged="StrengthSlider_ValueChanged"/>
                </Grid>
     
        </Grid>

        <!-- 底部按钮 -->
        <Border Grid.Row="2" 
                Background="{DynamicResource GlassBackgroundMediumBrush}" 
                BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1"
                Padding="24,16">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="{DynamicResource L_Common_OK}" 
                        Width="84" Height="32" IsDefault="True" 
                        Style="{StaticResource Win11PrimaryButtonStyle}" 
                        Click="OK_Click"/>
                <Button Content="{DynamicResource L_Common_Cancel}" 
                        Width="84" Height="32" Margin="12,0,0,0" IsCancel="True" 
                        Style="{StaticResource Win11SecondaryButtonStyle}" 
                        Click="CancelButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
