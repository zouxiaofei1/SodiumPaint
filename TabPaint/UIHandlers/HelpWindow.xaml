<Window x:Class="TabPaint.HelpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:gif="https://github.com/XamlAnimatedGif/XamlAnimatedGif" 
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner"
        
        ResizeMode="CanResize" 
              WindowStyle="None"
        AllowsTransparency="False"
        Background="Transparent"
        
        Width="800" MaxWidth="800" MinWidth="800"
        Height="500" MaxHeight="500" MinHeight="500"
        
        KeyDown="Window_KeyDown"
        ShowInTaskbar="False">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/Icons/Icons.xaml"/>
                <ResourceDictionary Source="/Resources/SubWindowStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <BooleanToVisibilityConverter x:Key="BoolToVis"/>

            <!-- 反向 Boolean 转 Visibility -->
            <Style x:Key="VisibleIfFalse" TargetType="FrameworkElement">
                <Style.Triggers>
                    <DataTrigger Binding="{Binding HasError}" Value="True">
                        <Setter Property="Visibility" Value="Collapsed"/>
                    </DataTrigger>
                    <DataTrigger Binding="{Binding HasError}" Value="False">
                        <Setter Property="Visibility" Value="Visible"/>
                    </DataTrigger>
                </Style.Triggers>
            </Style>

            <!-- Fluent 风格的加载圈样式 -->
            <Style x:Key="FluentProgressRingStyle" TargetType="ProgressBar">
                <Setter Property="Foreground" Value="{DynamicResource SystemAccentBrush}"/>
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Width" Value="48"/>
                <Setter Property="Height" Value="48"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ProgressBar">
                            <Grid x:Name="TemplateRoot" 
                                  SnapsToDevicePixels="true" 
                                  RenderTransformOrigin="0.5,0.5">

                                <Grid.RenderTransform>
                                    <RotateTransform x:Name="Rotation" Angle="0"/>
                                </Grid.RenderTransform>

                                <VisualStateManager.VisualStateGroups>
                                    <VisualStateGroup x:Name="CommonStates">
                                        <VisualState x:Name="Indeterminate">
                                            <Storyboard RepeatBehavior="Forever">
                                                <DoubleAnimation Storyboard.TargetName="Rotation"
                                                                 Storyboard.TargetProperty="Angle"
                                                                 From="0" To="360" Duration="0:0:1"/>
                                            </Storyboard>
                                        </VisualState>
                                    </VisualStateGroup>
                                </VisualStateManager.VisualStateGroups>

                                <Path Stroke="{TemplateBinding Foreground}"
                                      StrokeThickness="4"
                                      StrokeStartLineCap="Round"
                                      StrokeEndLineCap="Round"
                                      Width="48" Height="48"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"
                                      Data="M 24,4 A 20,20 0 1 1 4,24"/>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0" 
                      ResizeBorderThickness="0" 
                      CornerRadius="10" 
                      GlassFrameThickness="-1"/>
    </WindowChrome.WindowChrome>
    <Border Background="{DynamicResource GlassBackgroundHighBrush}" 
            BorderBrush="{DynamicResource BorderBrush}" 
            BorderThickness="1" 
            CornerRadius="8"
            ClipToBounds="True"
            MouseLeftButtonDown="Window_MouseLeftButtonDown">

        <Border.Effect>
            <DropShadowEffect BlurRadius="25" ShadowDepth="0" Opacity="0.3"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="32"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 背景装饰图形 -->
            <Grid IsHitTestVisible="False" Opacity="0.05" Grid.RowSpan="3">
                <Path Data="M0,0 L100,0 L100,100 Z" Fill="{DynamicResource SystemAccentBrush}" 
                      HorizontalAlignment="Left" VerticalAlignment="Top"
                      Margin="-20,-20,0,0" Stretch="Uniform" Width="150" Height="150"/>
                <Path Data="M50,0 A50,50 0 1 1 49.9,0" Fill="{DynamicResource SystemAccentBrush}" 
                      HorizontalAlignment="Right" VerticalAlignment="Bottom"
                      Margin="0,0,-50,-50" Stretch="Uniform" Width="200" Height="200"/>
            </Grid>

            <!-- 关闭按钮 -->
            <Button Grid.Row="0" HorizontalAlignment="Right"
                    Click="CloseButton_Click" Style="{StaticResource WindowCloseButtonStyle}"
                    Margin="0,0,0,0" Panel.ZIndex="10"/>

            <!-- 内容区 -->
            <Grid Grid.Row="1" Margin="40,10,40,10">

                <!-- 图片显示 -->
                <Image x:Name="MainImageDisplay" 
                       gif:AnimationBehavior.SourceUri="{Binding DisplayUri}"
                       gif:AnimationBehavior.AutoStart="False" 
                       gif:AnimationBehavior.RepeatBehavior="Forever"
                       Stretch="Uniform" 
                       RenderOptions.BitmapScalingMode="HighQuality">
                    <Image.Effect>
                        <DropShadowEffect BlurRadius="20" 
                          ShadowDepth="5" 
                          Direction="270" 
                          Color="Black" 
                          Opacity="0.4"/>
                    </Image.Effect>
                    <Image.Style>
                        <Style TargetType="Image">
                            <Style.Triggers>
                                <EventTrigger RoutedEvent="Loaded">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.15"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Style.Triggers>
                        </Style>
                    </Image.Style>
                </Image>

                <!-- 加载/错误遮罩 -->
                <Grid Visibility="{Binding IsBusy, Converter={StaticResource BoolToVis}}" 
                      Panel.ZIndex="5" 
                      HorizontalAlignment="Center" 
                      VerticalAlignment="Center">
                    <Grid.Style>
                        <Style TargetType="Grid">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsBusy}" Value="True">
                                    <DataTrigger.EnterActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.15"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </DataTrigger.EnterActions>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Grid.Style>

                    <Border Style="{StaticResource FluentCardStyle}" 
                            Padding="30,20"
                            Background="{DynamicResource ChromeMediumBrush}">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

                            <!-- 1. 加载中 -->
                            <StackPanel Style="{StaticResource VisibleIfFalse}">
                                <ProgressBar IsIndeterminate="True" 
                                             Style="{StaticResource FluentProgressRingStyle}"
                                             HorizontalAlignment="Center"/>
                                <TextBlock Text="{Binding LoadingText}" 
                                           Foreground="{DynamicResource TextSecondaryBrush}" 
                                           FontSize="14"
                                           HorizontalAlignment="Center" 
                                           Margin="0,15,0,0"/>
                            </StackPanel>

                            <!-- 2. 错误状态 -->
                            <StackPanel MouseLeftButtonDown="Retry_Click"
                                        Cursor="Hand"
                                        Background="Transparent">
                                <StackPanel.Style>
                                    <Style TargetType="StackPanel">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding HasError}" Value="True">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </StackPanel.Style>

                                <Path Data="M12,2C6.48,2 2,6.48 2,12C2,17.52 6.48,22 12,22C17.52,22 22,17.52 22,12C22,6.48 17.52,2 12,2M13,17H11V15H13V17M13,13H11V7H13V13Z" 
                                      Fill="{DynamicResource DangerBrush}"
                                      Width="32" Height="32" Stretch="Uniform"
                                      HorizontalAlignment="Center"/>

                                <TextBlock Text="{Binding ErrorText}" 
                                           Foreground="{DynamicResource TextPrimaryBrush}" 
                                           FontWeight="SemiBold"
                                           HorizontalAlignment="Center" 
                                           Margin="0,10,0,0"/>

                                <TextBlock Text="Click to retry" 
                                           FontSize="11"
                                           Foreground="{DynamicResource TextTertiaryBrush}"
                                           HorizontalAlignment="Center"
                                           Margin="0,4,0,0"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- 导航按钮 -->
                <Button HorizontalAlignment="Left" Margin="10,0,0,0"
                        Click="PrevButton_Click" Style="{StaticResource CircleNavButtonStyle}" Panel.ZIndex="6"
                        VerticalAlignment="Center">
                    <Path Data="{StaticResource ChevronLeft_Image}" Fill="{DynamicResource IconFillBrush}" Stretch="Uniform" Width="12" Height="12"/>
                </Button>

                <Button HorizontalAlignment="Right" Margin="0,0,10,0"
                        Click="NextButton_Click" Style="{StaticResource CircleNavButtonStyle}" Panel.ZIndex="6"
                        VerticalAlignment="Center">
                    <Path Data="{StaticResource ChevronRight_Image}" Fill="{DynamicResource IconFillBrush}" Stretch="Uniform" Width="12" Height="12"/>
                </Button>
            </Grid>

            <!-- 底部文字和圆点 -->
            <StackPanel Grid.Row="2" Margin="0,0,0,25">
                <TextBlock Text="{Binding CurrentDescription}" 
                           HorizontalAlignment="Center" 
                           FontSize="15" FontWeight="Bold"
                           Foreground="{DynamicResource TextPrimaryBrush}"
                           TextWrapping="Wrap" TextAlignment="Center"
                           Margin="50,0,50,15"/>

                <ItemsControl ItemsSource="{Binding Indicators}" HorizontalAlignment="Center">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border x:Name="DotBorder" Height="6" CornerRadius="3" Margin="3">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Width" Value="6"/>
                                        <Setter Property="Background" Value="{DynamicResource TextDisabledBrush}"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsActive}" Value="True">
                                                <DataTrigger.EnterActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <DoubleAnimation Storyboard.TargetProperty="Width" To="20" Duration="0:0:0.150">
                                                                <DoubleAnimation.EasingFunction>
                                                                    <CircleEase EasingMode="EaseOut"/>
                                                                </DoubleAnimation.EasingFunction>
                                                            </DoubleAnimation>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </DataTrigger.EnterActions>
                                                <Setter Property="Background" Value="{DynamicResource SystemAccentBrush}"/>
                                                <DataTrigger.ExitActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <DoubleAnimation Storyboard.TargetProperty="Width" To="6" Duration="0:0:0.150">
                                                                <DoubleAnimation.EasingFunction>
                                                                    <CircleEase EasingMode="EaseOut"/>
                                                                </DoubleAnimation.EasingFunction>
                                                            </DoubleAnimation>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </DataTrigger.ExitActions>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Grid>
    </Border>
</Window>