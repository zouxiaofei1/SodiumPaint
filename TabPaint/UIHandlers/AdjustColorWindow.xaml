<Window x:Class="TabPaint.AdjustColorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TabPaint"
        mc:Ignorable="d"
        Title="{DynamicResource L_AdjustColor_Title}" 
        Height="550" Width="900" MinWidth="700" MinHeight="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        Background="Transparent"
        FontFamily="Microsoft YaHei UI, Segoe UI, sans-serif"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="ClearType">

    <!-- 窗口边框样式 -->
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="32"  
                      GlassFrameThickness="-1" 
                      ResizeBorderThickness="4"
                      CornerRadius="0"/>
    </WindowChrome.WindowChrome>

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Resources/SubWindowStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- 简单的 TabItem 样式，如果没有全局样式的话，保证看起来协调 -->
            <Style TargetType="TabItem">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="Padding" Value="12,8"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="TabItem">
                            <Border Name="Border" Background="{TemplateBinding Background}" BorderThickness="0,0,0,2" BorderBrush="Transparent" Margin="0,0,4,0">
                                <ContentPresenter x:Name="ContentSite"
                                                  VerticalAlignment="Center"
                                                  HorizontalAlignment="Center"
                                                  ContentSource="Header"
                                                  Margin="10,2"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter TargetName="Border" Property="BorderBrush" Value="{DynamicResource AccentBrush}"/>
                                    <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                </Trigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <!-- 主容器 -->
    <Border Background="{DynamicResource PanelBackgroundBrush}" 
            BorderBrush="{DynamicResource BorderBrush}" 
            BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="32"/>
                <!-- 标题栏 -->
                <RowDefinition Height="*"/>
                <!-- 内容区 -->
            </Grid.RowDefinitions>

            <!-- 1. 标题栏 -->
            <Border Grid.Row="0" Background="{DynamicResource PanelBackgroundBrush}" BorderBrush="{DynamicResource BorderLightBrush}" BorderThickness="0,0,0,1">
                <Grid MouseLeftButtonDown="TitleBar_MouseDown">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Image Grid.Column="0" Source="pack://application:,,,/Resources/TabPaint.ico" 
                           Width="20" Height="20" Margin="10,0,8,0" 
                           RenderOptions.BitmapScalingMode="HighQuality"/>

                    <TextBlock Grid.Column="1" Text="{DynamicResource L_AdjustColor_Title}" 
                               VerticalAlignment="Center" Foreground="{DynamicResource TextSecondaryBrush}"/>

                    <Button Grid.Column="2" Click="Cancel_Click" Width="32" Height="32" 
                            WindowChrome.IsHitTestVisibleInChrome="True" 
                            Background="Transparent" BorderThickness="0" Padding="0" 
                            Style="{DynamicResource WindowCloseButtonStyle}"/>
                </Grid>
            </Border>

            <!-- 2. 主内容区：左右分栏 -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="320"/>
                    <!-- 左侧控制面板 -->
                    <ColumnDefinition Width="*"/>
                    <!-- 右侧预览 -->
                </Grid.ColumnDefinitions>

                <!-- 左侧：控件与直方图 -->
                <Border Grid.Column="0" BorderBrush="{DynamicResource BorderLightBrush}" BorderThickness="0,0,1,0" Background="{DynamicResource WindowBackgroundBrush}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <!-- TabControl -->
                            <RowDefinition Height="Auto"/>
                            <!-- 直方图 -->
                            <RowDefinition Height="Auto"/>
                            <!-- 按钮栏 -->
                        </Grid.RowDefinitions>

                        <!-- 上部：TabControl -->
                        <TabControl x:Name="AdjustTabControl" Grid.Row="0" Background="Transparent" BorderThickness="0" Margin="10,10,10,0">

                            <!-- Tab 1: 光效 (BCE) -->
                            <TabItem Header="{DynamicResource L_AdjustBCE_Tab_Light}">
                                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="10,15,10,0">
                                    <StackPanel Orientation="Vertical">
                                        <!-- 亮度 -->
                                        <Grid Margin="0,0,0,2">
                                            <TextBlock Text="{DynamicResource L_AdjustBCE_Brightness}" Style="{StaticResource LabelStyle}"/>
                                            <TextBox x:Name="BrightnessBox" Style="{StaticResource NumberInputStyle}" Text="0"
                                                     PreviewTextInput="NumberValidationTextBox" TextChanged="TextBox_TextChanged" Tag="{Binding ElementName=BrightnessSlider}"/>
                                        </Grid>
                                        <Slider x:Name="BrightnessSlider" Minimum="-100" Maximum="100" Value="0"
                                                TickFrequency="1" IsSnapToTickEnabled="True"
                                                ValueChanged="Slider_ValueChanged" Thumb.DragStarted="Slider_DragStarted" Thumb.DragCompleted="Slider_DragCompleted"
                                                MouseDoubleClick="Slider_MouseDoubleClick" Margin="0,0,0,16"/>

                                        <!-- 对比度 -->
                                        <Grid Margin="0,0,0,2">
                                            <TextBlock Text="{DynamicResource L_AdjustBCE_Contrast}" Style="{StaticResource LabelStyle}"/>
                                            <TextBox x:Name="ContrastBox" Style="{StaticResource NumberInputStyle}" Text="0"
                                                     PreviewTextInput="NumberValidationTextBox" TextChanged="TextBox_TextChanged" Tag="{Binding ElementName=ContrastSlider}"/>
                                        </Grid>
                                        <Slider x:Name="ContrastSlider" Minimum="-100" Maximum="100" Value="0"
                                                TickFrequency="1" IsSnapToTickEnabled="True"
                                                ValueChanged="Slider_ValueChanged" Thumb.DragStarted="Slider_DragStarted" Thumb.DragCompleted="Slider_DragCompleted"
                                                MouseDoubleClick="Slider_MouseDoubleClick" Margin="0,0,0,16"/>

                                        <!-- 曝光 -->
                                        <Grid Margin="0,0,0,2">
                                            <TextBlock Text="{DynamicResource L_AdjustBCE_Exposure}" Style="{StaticResource LabelStyle}"/>
                                            <TextBox x:Name="ExposureBox" Style="{StaticResource NumberInputStyle}" Text="0.0"
                                                     PreviewTextInput="NumberValidationTextBox" TextChanged="TextBox_TextChanged" Tag="{Binding ElementName=ExposureSlider}"/>
                                        </Grid>
                                        <Slider x:Name="ExposureSlider" Minimum="-2" Maximum="2" Value="0"
                                                TickFrequency="0.1" IsSnapToTickEnabled="True"
                                                ValueChanged="Slider_ValueChanged" Thumb.DragStarted="Slider_DragStarted" Thumb.DragCompleted="Slider_DragCompleted"
                                                MouseDoubleClick="Slider_MouseDoubleClick" Margin="0,0,0,5"/>
                                    </StackPanel>
                                </ScrollViewer>
                            </TabItem>

                            <!-- Tab 2: 色彩 (TTS) -->
                            <TabItem Header="{DynamicResource L_AdjustTTS_Tab_Color}">
                                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="10,15,10,0">
                                    <StackPanel Orientation="Vertical">
                                        <!-- 色温 -->
                                        <Grid Margin="0,0,0,2">
                                            <TextBlock Text="{DynamicResource L_AdjustTTS_Temperature}" Style="{StaticResource LabelStyle}"/>
                                            <TextBox x:Name="TemperatureBox" Style="{StaticResource NumberInputStyle}" Text="0"
                                                     PreviewTextInput="NumberValidationTextBox" TextChanged="TextBox_TextChanged" Tag="{Binding ElementName=TemperatureSlider}"/>
                                        </Grid>
                                        <Slider x:Name="TemperatureSlider" Minimum="-100" Maximum="100" Value="0"
                                                TickFrequency="1" IsSnapToTickEnabled="True"
                                                ValueChanged="Slider_ValueChanged" Thumb.DragStarted="Slider_DragStarted" Thumb.DragCompleted="Slider_DragCompleted"
                                                MouseDoubleClick="Slider_MouseDoubleClick" Margin="0,0,0,16"/>

                                        <!-- 色调 -->
                                        <Grid Margin="0,0,0,2">
                                            <TextBlock Text="{DynamicResource L_AdjustTTS_Tint}" Style="{StaticResource LabelStyle}"/>
                                            <TextBox x:Name="TintBox" Style="{StaticResource NumberInputStyle}" Text="0"
                                                     PreviewTextInput="NumberValidationTextBox" TextChanged="TextBox_TextChanged" Tag="{Binding ElementName=TintSlider}"/>
                                        </Grid>
                                        <Slider x:Name="TintSlider" Minimum="-100" Maximum="100" Value="0"
                                                TickFrequency="1" IsSnapToTickEnabled="True"
                                                ValueChanged="Slider_ValueChanged" Thumb.DragStarted="Slider_DragStarted" Thumb.DragCompleted="Slider_DragCompleted"
                                                MouseDoubleClick="Slider_MouseDoubleClick" Margin="0,0,0,16"/>

                                        <!-- 饱和度 -->
                                        <Grid Margin="0,0,0,2">
                                            <TextBlock Text="{DynamicResource L_AdjustTTS_Saturation}" Style="{StaticResource LabelStyle}"/>
                                            <TextBox x:Name="SaturationBox" Style="{StaticResource NumberInputStyle}" Text="0"
                                                     PreviewTextInput="NumberValidationTextBox" TextChanged="TextBox_TextChanged" Tag="{Binding ElementName=SaturationSlider}"/>
                                        </Grid>
                                        <Slider x:Name="SaturationSlider" Minimum="-100" Maximum="100" Value="0"
                                                TickFrequency="1" IsSnapToTickEnabled="True"
                                                ValueChanged="Slider_ValueChanged" Thumb.DragStarted="Slider_DragStarted" Thumb.DragCompleted="Slider_DragCompleted"
                                                MouseDoubleClick="Slider_MouseDoubleClick" Margin="0,0,0,5"/>
                                    </StackPanel>
                                </ScrollViewer>
                            </TabItem>

                        </TabControl>

                        <!-- 中部：直方图 (固定在底部上方) -->
                        <Border Grid.Row="1" Padding="20,5,20,10">
                            <Grid>
                                <!-- 背景框，可选 -->
                                <Border BorderBrush="{DynamicResource BorderLightBrush}" BorderThickness="0,0,0,1" Opacity="0.5" VerticalAlignment="Bottom"/>

                                <Grid x:Name="HistogramGrid" VerticalAlignment="Bottom" Height="60" Opacity="0.9">
                                    <Grid.OpacityMask>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Offset="0" Color="Transparent"/>
                                            <GradientStop Offset="0.2" Color="Black"/>
                                        </LinearGradientBrush>
                                    </Grid.OpacityMask>

                                    <!-- 红色通道 -->
                                    <Polyline x:Name="HistoRed" StrokeThickness="1" Fill="#66FF0000" Stroke="#88FF0000" Points="0,60 255,60">
                                        <Polyline.Effect>
                                            <BlurEffect Radius="2" RenderingBias="Performance"/>
                                        </Polyline.Effect>
                                    </Polyline>
                                    <!-- 绿色通道 -->
                                    <Polyline x:Name="HistoGreen" StrokeThickness="1" Fill="#6600FF00" Stroke="#8800FF00" Points="0,60 255,60">
                                        <Polyline.Effect>
                                            <BlurEffect Radius="2" RenderingBias="Performance"/>
                                        </Polyline.Effect>
                                    </Polyline>
                                    <!-- 蓝色通道 -->
                                    <Polyline x:Name="HistoBlue" StrokeThickness="1" Fill="#660000FF" Stroke="#880000FF" Points="0,60 255,60">
                                        <Polyline.Effect>
                                            <BlurEffect Radius="2" RenderingBias="Performance"/>
                                        </Polyline.Effect>
                                    </Polyline>
                                </Grid>
                            </Grid>
                        </Border>

                        <!-- 下部：按钮 -->
                        <Border Grid.Row="2" 
                                Background="{DynamicResource PanelBackgroundBrush}" 
                                Padding="15,12" 
                                BorderThickness="0,1,0,0" 
                                BorderBrush="{DynamicResource BorderLightBrush}">
                            <Grid>
                                <!-- 左侧：重置按钮 -->
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                    <Button Content="{DynamicResource L_Common_Reset}" Width="60" Click="Reset_Click"/>
                                </StackPanel>

                                <!-- 右侧：确定/取消 -->
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                    <Button Content="{DynamicResource L_Common_OK}" Width="80" Margin="0,0,8,0" Click="Ok_Click" Style="{StaticResource AccentButtonStyle}" IsDefault="True"/>
                                    <Button Content="{DynamicResource L_Common_Cancel}" Width="80" Click="Cancel_Click" IsCancel="True"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </Grid>
                </Border>

                <!-- 右侧：实时预览区域 -->
                <Border Grid.Column="1" Background="{DynamicResource PanelBackgroundBrush}" ClipToBounds="True">
                    <Grid>
                        <!-- 将资源定义在 Grid 内部 -->
                        <Grid.Resources>
                            <!-- 棋盘格背景资源：用于表示透明部分 -->
                            <DrawingBrush x:Key="CheckerBrush" TileMode="Tile" Viewport="0,0,20,20" ViewportUnits="Absolute">
                                <DrawingBrush.Drawing>
                                    <DrawingGroup>
                                        <GeometryDrawing Brush="#FF282828">
                                            <GeometryDrawing.Geometry>
                                                <RectangleGeometry Rect="0,0,20,20" />
                                            </GeometryDrawing.Geometry>
                                        </GeometryDrawing>
                                        <GeometryDrawing Brush="#FF333333">
                                            <GeometryDrawing.Geometry>
                                                <GeometryGroup>
                                                    <RectangleGeometry Rect="0,0,10,10" />
                                                    <RectangleGeometry Rect="10,10,10,10" />
                                                </GeometryGroup>
                                            </GeometryDrawing.Geometry>
                                        </GeometryDrawing>
                                    </DrawingGroup>
                                </DrawingBrush.Drawing>
                            </DrawingBrush>
                        </Grid.Resources>

                        <!-- 1. 底层：棋盘格 Border -->
                        <Border Background="{StaticResource CheckerBrush}"/>

                        <!-- 2. 中层：实际预览图 -->
                        <!-- RenderOptions.BitmapScalingMode="Fant" 保证缩放平滑 -->
                        <Image x:Name="PreviewImage" 
               Stretch="Uniform" 
               RenderOptions.BitmapScalingMode="Fant"
               Margin="10"/>

                        <!-- 3. 顶层：提示文字 -->
                        <TextBlock Text="预览" 
                   VerticalAlignment="Top" HorizontalAlignment="Left" 
                   Margin="15,10" Opacity="0.5" Foreground="White" IsHitTestVisible="False"/>
                    </Grid>
                </Border>


            </Grid>
        </Grid>
    </Border>
</Window>
