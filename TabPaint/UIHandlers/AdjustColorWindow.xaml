<Window x:Class="TabPaint.AdjustColorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TabPaint"
        xmlns:shell="clr-namespace:System.Windows.Shell;assembly=presentationframework"
        mc:Ignorable="d"
        Title="{DynamicResource L_AdjustTTS_Title}" 
        Height="450" Width="600" MinWidth="400" MinHeight="300"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize" WindowStyle="None"
        Background="Transparent">

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0" GlassFrameThickness="-1" ResizeBorderThickness="6" CornerRadius="0" />
    </WindowChrome.WindowChrome>

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Resources/SubWindowStyles.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Resources/Icons/Icons.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- Tab Switching Animation -->
            <Storyboard x:Key="TabFadeIn">
                <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0.4" To="1" Duration="0:0:0.150"/>
                <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(TranslateTransform.Y)" From="10" To="0" Duration="0:0:0.150">
                    <DoubleAnimation.EasingFunction>
                        <QuadraticEase EasingMode="EaseOut"/>
                    </DoubleAnimation.EasingFunction>
                </DoubleAnimation>
            </Storyboard>

            <!-- Modern TabItem Style -->
            <Style TargetType="TabItem">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="Padding" Value="12,6"/>
                <Setter Property="Margin" Value="0,0,4,0"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="TabItem">
                            <Grid x:Name="RootGrid" Background="Transparent">
                                <Border Name="HoverBorder" Background="{DynamicResource GlassBackgroundLowBrush}" CornerRadius="6" Opacity="0" Margin="2"/>
                                <Border Name="SelectionIndicator" Background="{DynamicResource AccentBrush}" Height="3" VerticalAlignment="Bottom" Width="16" CornerRadius="1.5" Opacity="0" Margin="0,0,0,0"/>
                                <ContentPresenter x:Name="ContentSite" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="12,8" ContentSource="Header">
                                    <ContentPresenter.Resources>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="{Binding Foreground, RelativeSource={RelativeSource AncestorType=TabItem}}"/>
                                        </Style>
                                    </ContentPresenter.Resources>
                                </ContentPresenter>
                            </Grid>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter TargetName="SelectionIndicator" Property="Opacity" Value="1"/>
                                    <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                </Trigger>
                                <MultiTrigger>
                                    <MultiTrigger.Conditions>
                                        <Condition Property="IsMouseOver" Value="True"/>
                                        <Condition Property="IsSelected" Value="False"/>
                                    </MultiTrigger.Conditions>
                                    <Setter TargetName="HoverBorder" Property="Opacity" Value="0.5"/>
                                    <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
                                </MultiTrigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- Colored Slider Styles -->
            <Style x:Key="ColorSliderBaseStyle" TargetType="Slider" BasedOn="{StaticResource Win11HorizontalSliderStyle}">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Slider">
                            <Border Background="Transparent" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                                <Grid VerticalAlignment="Center" Margin="0,6">
                                    <Border x:Name="TrackBackground" Background="{TemplateBinding Background}" Height="4" CornerRadius="2" VerticalAlignment="Center"/>
                                    <Track x:Name="PART_Track">
                                        <Track.DecreaseRepeatButton>
                                            <RepeatButton Command="{x:Static Slider.DecreaseLarge}" Template="{StaticResource TransparentRepeatButtonTemplate}"/>
                                        </Track.DecreaseRepeatButton>
                                        <Track.Thumb>
                                            <Thumb Style="{StaticResource Win11SliderThumbStyle}" VerticalAlignment="Center"/>
                                        </Track.Thumb>
                                        <Track.IncreaseRepeatButton>
                                            <RepeatButton Command="{x:Static Slider.IncreaseLarge}" Template="{StaticResource TransparentRepeatButtonTemplate}"/>
                                        </Track.IncreaseRepeatButton>
                                    </Track>
                                </Grid>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="TemperatureSliderStyle" TargetType="Slider" BasedOn="{StaticResource ColorSliderBaseStyle}">
                <Setter Property="Background">
                    <Setter.Value>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="#4A90E2" Offset="0"/>
                            <GradientStop Color="#F5F5F5" Offset="0.5"/>
                            <GradientStop Color="#D0021B" Offset="1"/>
                        </LinearGradientBrush>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="TintSliderStyle" TargetType="Slider" BasedOn="{StaticResource ColorSliderBaseStyle}">
                <Setter Property="Background">
                    <Setter.Value>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="#00FFFF" Offset="0"/>
                            <GradientStop Color="#0000FF" Offset="0.16"/>
                            <GradientStop Color="#FF00FF" Offset="0.33"/>
                            <GradientStop Color="#FF0000" Offset="0.5"/>
                            <GradientStop Color="#FFFF00" Offset="0.66"/>
                            <GradientStop Color="#00FF00" Offset="0.83"/>
                            <GradientStop Color="#00FFFF" Offset="1"/>
                        </LinearGradientBrush>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="SaturationSliderStyle" TargetType="Slider" BasedOn="{StaticResource ColorSliderBaseStyle}">
                <Setter Property="Background">
                    <Setter.Value>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="#808080" Offset="0"/>
                            <GradientStop Color="#858595" Offset="0.2"/>
                            <GradientStop Color="#8090B5" Offset="0.4"/>
                            <GradientStop Color="#75B575" Offset="0.6"/>
                            <GradientStop Color="#D0D070" Offset="0.8"/>
                            <GradientStop Color="#FF0000" Offset="1"/>
                        </LinearGradientBrush>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- Window Entry Animation -->
            <Storyboard x:Key="WindowOnLoad">
                <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.150">
                    <DoubleAnimation.EasingFunction>
                        <QuadraticEase EasingMode="EaseOut"/>
                    </DoubleAnimation.EasingFunction>
                </DoubleAnimation>
                <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleX)" From="0.95" To="1" Duration="0:0:0.150">
                    <DoubleAnimation.EasingFunction>
                        <BackEase Amplitude="0.3" EasingMode="EaseOut"/>
                    </DoubleAnimation.EasingFunction>
                </DoubleAnimation>
                <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleY)" From="0.95" To="1" Duration="0:0:0.150">
                    <DoubleAnimation.EasingFunction>
                        <BackEase Amplitude="0.3" EasingMode="EaseOut"/>
                    </DoubleAnimation.EasingFunction>
                </DoubleAnimation>
            </Storyboard>
        </ResourceDictionary>
    </Window.Resources>

    <Window.RenderTransform>
        <ScaleTransform CenterX="300" CenterY="210"/>
    </Window.RenderTransform>

    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard Storyboard="{StaticResource WindowOnLoad}"/>
        </EventTrigger>
    </Window.Triggers>

    <Border Background="Transparent" 
         CornerRadius="12" 
         BorderBrush="{DynamicResource BorderLightBrush}" 
         BorderThickness="1" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="32"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" BorderThickness="0,0,0,1" Background="Transparent">
                <Grid >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Image Grid.Column="0" Source="pack://application:,,,/Resources/TabPaint.ico" 
                        Width="20" Height="20" Margin="12,0,8,0" 
                        RenderOptions.BitmapScalingMode="HighQuality"/>

                    <TextBlock Grid.Column="1" Text="{DynamicResource L_AdjustTTS_Title}" 
                            VerticalAlignment="Center" Foreground="{DynamicResource TextSecondaryBrush}" FontSize="12"/>

                    <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Top">

                        <Button Width="48" Height="30" ToolTip="{DynamicResource L_TitleBar_Close}" Click="OnCloseClick" Style="{StaticResource WindowCloseButtonStyle}">
                            <Viewbox Width="10" Height="10">
                                <Path Stroke="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}" 
                           StrokeThickness="1" 
                           Data="M0,0 L12,12 M12,0 L0,12"/>
                            </Viewbox>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

    <!-- 2. 中间主要内容区：左右分栏 -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="240"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- 左侧：控件与直方图 -->
                <Border Grid.Column="0" BorderBrush="Transparent" BorderThickness="0" Background="{DynamicResource GlassBackgroundLowBrush}">
                    <Grid Margin="12,8,8,8">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- 调整卡片 -->
                        <Border Grid.Row="0" Background="{DynamicResource GlassBackgroundLowBrush}" CornerRadius="12" BorderBrush="{DynamicResource BorderLightBrush}" BorderThickness="1">
              
                            <Grid Margin="4,4,4,4">
                                <TabControl x:Name="AdjustTabControl" Background="Transparent" BorderThickness="0" Margin="0" SelectionChanged="AdjustTabControl_SelectionChanged">
                                    <!-- Tab 1: 光效 (BCE) -->
                                    <TabItem Header="{DynamicResource L_AdjustBCE_Tab_Light}">
                                        <ScrollViewer x:Name="BceScrollViewer" VerticalScrollBarVisibility="Auto" Style="{StaticResource FluentScrollViewer}" Padding="10,8,10,0">
                                            <ScrollViewer.RenderTransform>
                                                <TranslateTransform Y="0"/>
                                            </ScrollViewer.RenderTransform>
                                            <StackPanel Orientation="Vertical">
                                                <!-- 亮度 -->
                                                <Grid Margin="0,0,0,2">
                                                    <TextBlock Text="{DynamicResource L_AdjustBCE_Brightness}" Style="{StaticResource LabelStyle}"/>
                                                    <TextBox Width="60"  HorizontalContentAlignment="Right" HorizontalAlignment="Right" x:Name="BrightnessBox" Text="0" PreviewTextInput="NumberValidationTextBox" TextChanged="TextBox_TextChanged" Tag="{Binding ElementName=BrightnessSlider}"/>
                                                </Grid>
                                                <Slider  Style="{StaticResource Win11HorizontalSliderStyle}" x:Name="BrightnessSlider" Minimum="-100" Maximum="100" Value="0" TickFrequency="1" IsSnapToTickEnabled="True" ValueChanged="Slider_ValueChanged" Thumb.DragStarted="Slider_DragStarted" Thumb.DragCompleted="Slider_DragCompleted" MouseDoubleClick="Slider_MouseDoubleClick" Margin="0,0,0,5"/>
                                                <!-- 对比度 -->
                                                <Grid Margin="0,0,0,2">
                                                    <TextBlock Text="{DynamicResource L_AdjustBCE_Contrast}" Style="{StaticResource LabelStyle}"/>
                                                    <TextBox Width="60"  HorizontalContentAlignment="Right" HorizontalAlignment="Right" x:Name="ContrastBox" Text="0" PreviewTextInput="NumberValidationTextBox" TextChanged="TextBox_TextChanged" Tag="{Binding ElementName=ContrastSlider}"/>
                                                </Grid>
                                                <Slider Style="{StaticResource Win11HorizontalSliderStyle}" x:Name="ContrastSlider" Minimum="-100" Maximum="100" Value="0" TickFrequency="1" IsSnapToTickEnabled="True" ValueChanged="Slider_ValueChanged" Thumb.DragStarted="Slider_DragStarted" Thumb.DragCompleted="Slider_DragCompleted" MouseDoubleClick="Slider_MouseDoubleClick" Margin="0,0,0,5"/>
                                                <!-- 曝光 -->
                                                <Grid Margin="0,0,0,2">
                                                    <TextBlock Text="{DynamicResource L_AdjustBCE_Exposure}" Style="{StaticResource LabelStyle}"/>
                                                    <TextBox Width="60"  HorizontalContentAlignment="Right" HorizontalAlignment="Right" x:Name="ExposureBox" Text="0.0" PreviewTextInput="NumberValidationTextBox" TextChanged="TextBox_TextChanged" Tag="{Binding ElementName=ExposureSlider}"/>
                                                </Grid>
                                                <Slider Style="{StaticResource Win11HorizontalSliderStyle}" x:Name="ExposureSlider" Minimum="-2" Maximum="2" Value="0" TickFrequency="0.1" IsSnapToTickEnabled="True" ValueChanged="Slider_ValueChanged" Thumb.DragStarted="Slider_DragStarted" Thumb.DragCompleted="Slider_DragCompleted" MouseDoubleClick="Slider_MouseDoubleClick" Margin="0,0,0,5"/>
                                            </StackPanel>
                                        </ScrollViewer>
                                    </TabItem>

                                    <!-- Tab 2: 色彩 (TTS) -->
                                    <TabItem Header="{DynamicResource L_AdjustTTS_Tab_Color}">
                                        <ScrollViewer x:Name="TtsScrollViewer" VerticalScrollBarVisibility="Auto" Style="{StaticResource FluentScrollViewer}" Padding="10,8,10,0">
                                            <ScrollViewer.RenderTransform>
                                                <TranslateTransform Y="0"/>
                                            </ScrollViewer.RenderTransform>
                                            <StackPanel Orientation="Vertical">
                                                <!-- 色温 -->
                                                <Grid Margin="0,0,0,2">
                                                    <TextBlock Text="{DynamicResource L_AdjustTTS_Temperature}" Style="{StaticResource LabelStyle}"/>
                                                    <TextBox Width="60"  HorizontalContentAlignment="Right" HorizontalAlignment="Right" x:Name="TemperatureBox" Text="0" PreviewTextInput="NumberValidationTextBox" TextChanged="TextBox_TextChanged" Tag="{Binding ElementName=TemperatureSlider}"/>
                                                </Grid>
                                                <Slider Style="{StaticResource TemperatureSliderStyle}" x:Name="TemperatureSlider" Minimum="-100" Maximum="100" Value="0" TickFrequency="1" IsSnapToTickEnabled="True" ValueChanged="Slider_ValueChanged" Thumb.DragStarted="Slider_DragStarted" Thumb.DragCompleted="Slider_DragCompleted" MouseDoubleClick="Slider_MouseDoubleClick" Margin="0,0,0,5"/>
                                                <!-- 色调 -->
                                                <Grid Margin="0,0,0,2">
                                                    <TextBlock Text="{DynamicResource L_AdjustTTS_Tint}" Style="{StaticResource LabelStyle}"/>
                                                    <TextBox Width="60"  HorizontalContentAlignment="Right" HorizontalAlignment="Right"  x:Name="TintBox" Text="0" PreviewTextInput="NumberValidationTextBox" TextChanged="TextBox_TextChanged" Tag="{Binding ElementName=TintSlider}"/>
                                                </Grid>
                                                <Slider Style="{StaticResource TintSliderStyle}" x:Name="TintSlider" Minimum="-180" Maximum="180" Value="0" TickFrequency="1" IsSnapToTickEnabled="True" ValueChanged="Slider_ValueChanged" Thumb.DragStarted="Slider_DragStarted" Thumb.DragCompleted="Slider_DragCompleted" MouseDoubleClick="Slider_MouseDoubleClick" Margin="0,0,0,5"/>
                                                <!-- 饱和度 -->
                                                <Grid Margin="0,0,0,2">
                                                    <TextBlock Text="{DynamicResource L_AdjustTTS_Saturation}" Style="{StaticResource LabelStyle}"/>
                                                    <TextBox Width="60"  HorizontalContentAlignment="Right" HorizontalAlignment="Right"  x:Name="SaturationBox" Text="0" PreviewTextInput="NumberValidationTextBox" TextChanged="TextBox_TextChanged" Tag="{Binding ElementName=SaturationSlider}"/>
                                                </Grid>
                                                <Slider Style="{StaticResource SaturationSliderStyle}" x:Name="SaturationSlider" Minimum="-100" Maximum="100" Value="0" TickFrequency="1" IsSnapToTickEnabled="True" ValueChanged="Slider_ValueChanged" Thumb.DragStarted="Slider_DragStarted" Thumb.DragCompleted="Slider_DragCompleted" MouseDoubleClick="Slider_MouseDoubleClick" Margin="0,0,0,5"/>
                                            </StackPanel>
                                        </ScrollViewer>
                                    </TabItem>
                                </TabControl>
                            </Grid>
                        </Border>

                        <!-- 直方图卡片 -->
                        <Border Grid.Row="1" Margin="0,12,0,4" Background="{DynamicResource GlassBackgroundLowBrush}" CornerRadius="12" BorderBrush="{DynamicResource BorderLightBrush}" BorderThickness="1" Padding="12,8">
                 
                            <Grid>
                                <Grid x:Name="HistogramGrid" VerticalAlignment="Bottom" Height="60" Margin="0" ClipToBounds="True">
                                    <Grid.OpacityMask>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Offset="0" Color="Transparent"/>
                                            <GradientStop Offset="0.1" Color="Black"/>
                                        </LinearGradientBrush>
                                    </Grid.OpacityMask>

                                    <Polyline x:Name="HistoRed" StrokeThickness="1.2" Stroke="#CCFF4444" Points="0,70 255,70">
                                        <Polyline.Fill>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                <GradientStop Offset="0" Color="#66FF4444"/>
                                                <GradientStop Offset="1" Color="#11FF4444"/>
                                            </LinearGradientBrush>
                                        </Polyline.Fill>
                                        <Polyline.Effect>
                                            <DropShadowEffect BlurRadius="5" Color="#FF4444" ShadowDepth="0" Opacity="0.4"/>
                                        </Polyline.Effect>
                                    </Polyline>

                                    <Polyline x:Name="HistoGreen" StrokeThickness="1.2" Stroke="#CC44FF44" Points="0,70 255,70">
                                        <Polyline.Fill>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                <GradientStop Offset="0" Color="#6644FF44"/>
                                                <GradientStop Offset="1" Color="#1144FF44"/>
                                            </LinearGradientBrush>
                                        </Polyline.Fill>
                                        <Polyline.Effect>
                                            <DropShadowEffect BlurRadius="5" Color="#44FF44" ShadowDepth="0" Opacity="0.4"/>
                                        </Polyline.Effect>
                                    </Polyline>

                                    <Polyline x:Name="HistoBlue" StrokeThickness="1.2" Stroke="#CC4444FF" Points="0,70 255,70">
                                        <Polyline.Fill>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                <GradientStop Offset="0" Color="#664444FF"/>
                                                <GradientStop Offset="1" Color="#114444FF"/>
                                            </LinearGradientBrush>
                                        </Polyline.Fill>
                                        <Polyline.Effect>
                                            <DropShadowEffect BlurRadius="5" Color="#4444FF" ShadowDepth="0" Opacity="0.4"/>
                                        </Polyline.Effect>
                                    </Polyline>
                                </Grid>
                            </Grid>
                        </Border>
                    </Grid>
                </Border>

                <!-- 右侧：实时预览区域 -->
                <Border Grid.Column="1" Background="{DynamicResource GlassBackgroundLowBrush}" ClipToBounds="True">
                    <Grid Margin="8,8,12,12">
                        <Border Background="{DynamicResource GlassBackgroundLowBrush}" CornerRadius="12" BorderBrush="{DynamicResource BorderLightBrush}" BorderThickness="1">
          
                            <Grid Margin="8">
                                <Border Background="{StaticResource CheckerboardBrush}" CornerRadius="8"/>
                                <Border BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" CornerRadius="8">
                                    <Image x:Name="PreviewImage" 
                                           Stretch="Uniform" 
                                           RenderOptions.BitmapScalingMode="Fant"
                                           Margin="2">
                                        <Image.Effect>
                                            <DropShadowEffect BlurRadius="15" Direction="0" ShadowDepth="0" Opacity="0.3"/>
                                        </Image.Effect>
                                    </Image>
                                </Border>
                                <Border HorizontalAlignment="Left" VerticalAlignment="Top" 
                                        Background="#AA000000" CornerRadius="4" Padding="8,4" Margin="8">
                                    <StackPanel Orientation="Horizontal">
                                        <Ellipse Width="6" Height="6" Fill="#4CAF50" Margin="0,0,6,0"/>
                                        <TextBlock Text="{DynamicResource L_Common_Preview}" 
                                                   Foreground="White" FontSize="11" IsHitTestVisible="False"/>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </Border>
                    </Grid>
                </Border>
            </Grid>

            <!-- 3. 底部按钮栏：跨两列 -->
            <Border Grid.Row="2" Grid.ColumnSpan="2"
                    Background="Transparent" 
                    Padding="15,12" 
                    BorderThickness="0,1,0,0" 
                    BorderBrush="{DynamicResource BorderLightBrush}">
                <Grid>
                    <!-- 左侧：重置按钮 -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                        <Button Content="{DynamicResource L_Common_Reset}" Width="60" Click="Reset_Click"/>
                    </StackPanel>

                    <!-- 右侧：确定/取消 -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="{DynamicResource L_Common_OK}" Width="80" Margin="0,0,8,0" Click="Ok_Click" Style="{StaticResource AccentButtonStyle}" IsDefault="True"/>
                        <Button Content="{DynamicResource L_Common_Cancel}" Width="80" Click="Cancel_Click" IsCancel="True"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
