<Window x:Class="TabPaint.FluentMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="TabPaint" 
        Height="Auto" Width="440"
        WindowStyle="None"
        ResizeMode="CanResize"
        SizeToContent="Height"
        Background="Transparent"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False"
        Topmost="True">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Resources/SubWindowStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <!-- 启用 WindowChrome 以支持无边框窗口的系统行为 (阴影、Snap等) 且兼容 Mica -->
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0" ResizeBorderThickness="0" GlassFrameThickness="-1" CornerRadius="0"/>
    </WindowChrome.WindowChrome>

    <!-- 
       外层 Border：
       Background 使用 GlassBackgroundLowBrush (约20%透明度)，
       这样 Mica 效果能透过这层薄薄的背景显示出来。
    -->
    <Border Background="{DynamicResource GlassBackgroundMediumBrush}" 
            BorderBrush="{DynamicResource BorderBrush}" 
            BorderThickness="1" 
            CornerRadius="8"
            MouseLeftButtonDown="Window_MouseLeftButtonDown">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- 顶部间距/标题栏区域 -->
                <RowDefinition Height="*"/>
                <!-- 内容 -->
                <RowDefinition Height="Auto"/>
                <!-- 按钮 -->
            </Grid.RowDefinitions>

            <!-- 标题 (可选，做得很淡，不占用交互空间) -->
            <TextBlock x:Name="TxtTitle" 
                       Grid.Row="0"
                       Text="Title" 
                       Margin="24,16,24,0"
                       FontWeight="SemiBold" 
                       FontSize="13" 
                       Opacity="0.8"
                       Foreground="{DynamicResource TextSecondaryBrush}"/>
            <Button Grid.Column="0"
                            Style="{StaticResource WindowCloseButtonStyle}"
                            Click="BtnClose_Click"  HorizontalAlignment="Right"
                            WindowChrome.IsHitTestVisibleInChrome="True"/>
            <!-- ================= 内容区 ================= -->
            <Grid Grid.Row="1" Margin="24,16,24,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <!-- 图标列 -->
                    <ColumnDefinition Width="*"/>
                    <!-- 文字列 -->
                </Grid.ColumnDefinitions>

                <!-- 图标容器 -->
                <Viewbox x:Name="IconContainer" 
         Grid.Column="0" 
         Width="32" Height="32" 
         VerticalAlignment="Top" 
         Margin="0,2,16,0">

                    <Path x:Name="IconPath" 
          Fill="{DynamicResource SystemAccentBrush}" 
          Stretch="Uniform"
          Width="24" Height="24" />
                    <!-- 增加：显式指定 Path 的原始视口大小 -->
                </Viewbox>


                <TextBlock x:Name="TxtMessage" 
                           Grid.Column="1"
                           Text="Message Content" 
                           TextWrapping="Wrap" 
                           FontSize="14" 
                           LineHeight="22"
                           VerticalAlignment="Center"
                           Foreground="{DynamicResource TextPrimaryBrush}"/>
          
            </Grid>

            <!-- ================= 按钮区 ================= -->
            <!-- 使用略微不同的背景色区分按钮区，增加层次感 -->
            <Border Grid.Row="2" 
                    Background="{DynamicResource SubtleHoverBrush}" 
                    BorderBrush="{DynamicResource BorderLightBrush}"
                    BorderThickness="0,1,0,0"
                    CornerRadius="0,0,8,8"
                    Padding="24,16">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button x:Name="BtnOpenLog" 
            Content="{DynamicResource L_Common_OpenLogFolder}" 
            Style="{DynamicResource Win11SecondaryButtonStyle}" 
            MinWidth="100" Height="32" Margin="0,0,8,0" 
            Click="BtnOpenLog_Click" 
            Visibility="Collapsed"/>
                    <Button x:Name="BtnYes" Content="{DynamicResource L_Common_OK}" Style="{DynamicResource Win11PrimaryButtonStyle}" MinWidth="76" Height="32" Margin="8,0,0,0" Click="BtnYes_Click" Visibility="Collapsed"/>
                    <Button x:Name="BtnOk" Content="{DynamicResource L_Common_OK}" Style="{DynamicResource Win11PrimaryButtonStyle}" MinWidth="76" Height="32" Margin="8,0,0,0" Click="BtnOk_Click" Visibility="Collapsed"/>

                    <Button x:Name="BtnNo" Content="{DynamicResource L_Common_Cancel}" Style="{DynamicResource Win11SecondaryButtonStyle}" MinWidth="76" Height="32" Margin="8,0,0,0" Click="BtnNo_Click" Visibility="Collapsed"/>
                    <Button x:Name="BtnCancel" Content="{DynamicResource L_Common_Cancel}" Style="{DynamicResource Win11SecondaryButtonStyle}" MinWidth="76" Height="32" Margin="8,0,0,0" Click="BtnCancel_Click" Visibility="Collapsed"/>

                </StackPanel>
            </Border>

        </Grid>
    </Border>
</Window>
