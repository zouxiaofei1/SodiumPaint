<Window x:Class="TabPaint.Windows.IcoExportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Export ICO" Height="380" Width="500"
        MinHeight="250" MinWidth="400"
        WindowStartupLocation="CenterOwner" ResizeMode="CanResize" WindowStyle="None"
        AllowsTransparency="False" Background="Transparent">

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0" GlassFrameThickness="-1" ResizeBorderThickness="6" CornerRadius="0" />
    </WindowChrome.WindowChrome>

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Resources/SubWindowStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- ================= Fluent UI ScrollBar Style Start ================= -->
            <SolidColorBrush x:Key="ScrollBarTrackBackground" Color="Transparent"/>
            <SolidColorBrush x:Key="ScrollBarThumb" Color="#888888"/>
            <SolidColorBrush x:Key="ScrollBarThumbHover" Color="#666666"/>
            <SolidColorBrush x:Key="ScrollBarThumbDragging" Color="#444444"/>

            <Style x:Key="FluentScrollBarThumb" TargetType="{x:Type Thumb}">
                <Setter Property="OverridesDefaultStyle" Value="true"/>
                <Setter Property="IsTabStop" Value="false"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type Thumb}">
                            <Border x:Name="rectangle"
                                    Background="{StaticResource ScrollBarThumb}"
                                    CornerRadius="3"
                                    Height="{TemplateBinding Height}"
                                    SnapsToDevicePixels="True"
                                    Width="{TemplateBinding Width}"/>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="true">
                                    <Setter TargetName="rectangle" Property="Background" Value="{StaticResource ScrollBarThumbHover}"/>
                                </Trigger>
                                <Trigger Property="IsDragging" Value="true">
                                    <Setter TargetName="rectangle" Property="Background" Value="{StaticResource ScrollBarThumbDragging}"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="FluentScrollBarStyle" TargetType="{x:Type ScrollBar}">
                <Setter Property="Stylus.IsPressAndHoldEnabled" Value="false"/>
                <Setter Property="Stylus.IsFlicksEnabled" Value="false"/>
                <Setter Property="Background" Value="{StaticResource ScrollBarTrackBackground}"/>
                <Setter Property="Width" Value="6"/>
                <Setter Property="MinWidth" Value="6"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type ScrollBar}">
                            <Grid x:Name="Bg" SnapsToDevicePixels="true">
                                <Track x:Name="PART_Track" IsDirectionReversed="true" IsEnabled="{TemplateBinding IsEnabled}">
                                    <Track.DecreaseRepeatButton>
                                        <RepeatButton Command="{x:Static ScrollBar.LineUpCommand}" Opacity="0" Focusable="false" />
                                    </Track.DecreaseRepeatButton>
                                    <Track.IncreaseRepeatButton>
                                        <RepeatButton Command="{x:Static ScrollBar.LineDownCommand}" Opacity="0" Focusable="false"/>
                                    </Track.IncreaseRepeatButton>
                                    <Track.Thumb>
                                        <Thumb Style="{StaticResource FluentScrollBarThumb}"/>
                                    </Track.Thumb>
                                </Track>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Style.Triggers>
                    <Trigger Property="Orientation" Value="Horizontal">
                        <Setter Property="Width" Value="Auto"/>
                        <Setter Property="MinWidth" Value="0"/>
                        <Setter Property="Height" Value="6"/>
                        <Setter Property="MinHeight" Value="6"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type ScrollBar}">
                                    <Grid x:Name="Bg" SnapsToDevicePixels="true">
                                        <Track x:Name="PART_Track" IsEnabled="{TemplateBinding IsEnabled}">
                                            <Track.DecreaseRepeatButton>
                                                <RepeatButton Command="{x:Static ScrollBar.LineLeftCommand}" Opacity="0" Focusable="false"/>
                                            </Track.DecreaseRepeatButton>
                                            <Track.IncreaseRepeatButton>
                                                <RepeatButton Command="{x:Static ScrollBar.LineRightCommand}" Opacity="0" Focusable="false"/>
                                            </Track.IncreaseRepeatButton>
                                            <Track.Thumb>
                                                <Thumb Style="{StaticResource FluentScrollBarThumb}"/>
                                            </Track.Thumb>
                                        </Track>
                                    </Grid>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Trigger>
                </Style.Triggers>
            </Style>

            <!-- 应用到 ScrollViewer 的样式 -->
            <Style x:Key="FluentScrollViewerStyle" TargetType="{x:Type ScrollViewer}">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type ScrollViewer}">
                            <Grid x:Name="Grid" Background="{TemplateBinding Background}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <ScrollContentPresenter x:Name="PART_ScrollContentPresenter" CanContentScroll="{TemplateBinding CanContentScroll}" CanHorizontallyScroll="False" CanVerticallyScroll="False" ContentTemplate="{TemplateBinding ContentTemplate}" Content="{TemplateBinding Content}" Grid.Column="0" Margin="{TemplateBinding Padding}" Grid.Row="0"/>
                                <ScrollBar x:Name="PART_VerticalScrollBar" AutomationProperties.AutomationId="VerticalScrollBar" Cursor="Arrow" Grid.Column="1" Maximum="{TemplateBinding ScrollableHeight}" Minimum="0" Grid.Row="0" Visibility="{TemplateBinding ComputedVerticalScrollBarVisibility}" Value="{Binding VerticalOffset, Mode=OneWay, RelativeSource={RelativeSource TemplatedParent}}" ViewportSize="{TemplateBinding ViewportHeight}" Style="{StaticResource FluentScrollBarStyle}"/>
                                <ScrollBar x:Name="PART_HorizontalScrollBar" AutomationProperties.AutomationId="HorizontalScrollBar" Cursor="Arrow" Grid.Column="0" Maximum="{TemplateBinding ScrollableWidth}" Minimum="0" Orientation="Horizontal" Grid.Row="1" Visibility="{TemplateBinding ComputedHorizontalScrollBarVisibility}" Value="{Binding HorizontalOffset, Mode=OneWay, RelativeSource={RelativeSource TemplatedParent}}" ViewportSize="{TemplateBinding ViewportWidth}" Style="{StaticResource FluentScrollBarStyle}"/>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            <!-- ================= Fluent UI ScrollBar Style End ================= -->

        </ResourceDictionary>
    </Window.Resources>



    <!-- 窗口边框与背景 -->
    <Border x:Name="RootBorder"  Background="Transparent" 
            BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" CornerRadius="8">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 背景装饰图形 -->
            <Canvas IsHitTestVisible="False" Opacity="0.05">
                <Path Fill="{DynamicResource SystemAccentBrush}" Data="M0,0 L200,0 A200,200 0 0 1 0,200 Z" Canvas.Top="-50" Canvas.Left="-50"/>
                <Path Fill="{DynamicResource SystemAccentBrush}" Data="M100,100 A50,50 0 1 1 0,100 A50,50 0 1 1 100,100" Canvas.Bottom="20" Canvas.Right="40"/>
            </Canvas>

            <!-- 1. TitleBar -->
            <Border Background="Transparent" 
         CornerRadius="12" 
         BorderBrush="{DynamicResource BorderLightBrush}" 
         BorderThickness="1" MouseLeftButtonDown="TitleBar_MouseDown">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="32"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" BorderThickness="0,0,0,1" Background="Transparent">
                        <Grid >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Image Grid.Column="0" Source="pack://application:,,,/Resources/TabPaint.ico" 
                        Width="20" Height="20" Margin="12,0,8,0" 
                        RenderOptions.BitmapScalingMode="HighQuality"/>

                            <TextBlock Grid.Column="1" Text="{DynamicResource L_Ico_Title}" 
                            VerticalAlignment="Center" Foreground="{DynamicResource TextSecondaryBrush}" FontSize="12"/>

                            <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Top">

                                <Button Width="48" Height="30" ToolTip="{DynamicResource L_TitleBar_Close}" Click="OnCloseClick" Style="{StaticResource WindowCloseButtonStyle}">
                                    <Viewbox Width="10" Height="10">
                                        <Path Stroke="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}" 
                           StrokeThickness="1" 
                           Data="M0,0 L12,12 M12,0 L0,12"/>
                                    </Viewbox>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </Border>

            <!-- 2. 工具栏 -->
            <Border Grid.Row="1" Padding="16,4,16,12">
                <Border Style="{StaticResource SubWindowCardStyle}" Margin="0" Padding="8">
                    <StackPanel Orientation="Horizontal">
                        <Path Data="M19,13H13V19H11V13H5V11H11V5H13V11H19V13Z" Fill="{DynamicResource SystemAccentBrush}" 
                              Stretch="Uniform" Width="16" Height="16" Margin="4,0,12,0" VerticalAlignment="Center"/>
                        <TextBlock Text="{DynamicResource L_Ico_AddSize}" Style="{StaticResource FluentLabelStyle}"
                                   Foreground="{DynamicResource TextPrimaryBrush}" Margin="0,0,12,0" FontWeight="Medium"/>
                        <ComboBox x:Name="SizeComboBox" Width="120" Height="32" Style="{DynamicResource FluentComboBoxStyle}" SelectedIndex="0">
                            <ComboBoxItem Content="512 px"/>
                            <ComboBoxItem Content="256 px"/>
                            <ComboBoxItem Content="128 px"/>
                            <ComboBoxItem Content="64 px"/>
                            <ComboBoxItem Content="48 px"/>
                            <ComboBoxItem Content="32 px"/>
                            <ComboBoxItem Content="24 px"/>
                            <ComboBoxItem Content="16 px"/>
                        </ComboBox>
                        <Button Content="+" Width="28" Height="28" Margin="8,0,0,0" FontSize="16" Foreground="{DynamicResource TextPrimaryBrush}"
                            Style="{DynamicResource Win11PrimaryButtonStyle}" Click="OnAddSizeClick"/>
                    </StackPanel>
                </Border>
            </Border>

            <!-- 3. 内容区 -->
            <Grid Grid.Row="2" Margin="16,0,16,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Border Style="{StaticResource FluentCardStyle}" Padding="0">
                    <Grid>
                        <ListBox x:Name="SizeListBox"  
                             Background="Transparent" BorderThickness="0"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                             ScrollViewer.VerticalScrollBarVisibility="Auto"
                             SelectionChanged="SizeListBox_SelectionChanged"
                             Padding="4">

                            <ListBox.Resources>
                                <Style TargetType="{x:Type ScrollViewer}" BasedOn="{StaticResource FluentScrollViewerStyle}"/>
                            </ListBox.Resources>

                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem" BasedOn="{StaticResource NavListBoxItemStyle}">
                                    <Setter Property="Padding" Value="8,6"/>
                                    <Setter Property="Margin" Value="0,1"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                    <Setter Property="BorderThickness" Value="3,0,0,0"/>
                                </Style>
                            </ListBox.ItemContainerStyle>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid x:Name="ItemGrid">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Border Width="32" Height="32" Background="{DynamicResource CheckerboardBrush}" CornerRadius="4" Margin="0,0,12,0">
                                            <Image Source="{Binding Image}" Stretch="Uniform" Margin="2" RenderOptions.BitmapScalingMode="HighQuality"/>
                                        </Border>
                                        <TextBlock Grid.Column="1" Text="{Binding DisplayText}" 
                                               VerticalAlignment="Center" Foreground="{DynamicResource TextPrimaryBrush}" FontWeight="Medium"/>
                                        <Button Grid.Column="2" Content="&#xE711;" FontFamily="Segoe MDL2 Assets"
                                            Style="{DynamicResource TitleBarButtonStyle}"  Foreground="{DynamicResource TextSecondaryBrush}"
                                            Click="OnDeleteSizeClick" Tag="{Binding}" Width="24" Height="24" FontSize="10"
                                            x:Name="DelBtn" Opacity="0">
                                            <Button.RenderTransform>
                                                <ScaleTransform ScaleX="0.8" ScaleY="0.8"/>
                                            </Button.RenderTransform>
                                        </Button>
                                    </Grid>
                                    <DataTemplate.Triggers>
                                        <DataTrigger Binding="{Binding IsMouseOver, RelativeSource={RelativeSource AncestorType=ListBoxItem}}" Value="True">
                                            <DataTrigger.EnterActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation Storyboard.TargetName="DelBtn" Storyboard.TargetProperty="Opacity" To="1" Duration="0:0:0.15"/>
                                                        <DoubleAnimation Storyboard.TargetName="DelBtn" Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)" To="1" Duration="0:0:0.15"/>
                                                        <DoubleAnimation Storyboard.TargetName="DelBtn" Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)" To="1" Duration="0:0:0.15"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </DataTrigger.EnterActions>
                                            <DataTrigger.ExitActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation Storyboard.TargetName="DelBtn" Storyboard.TargetProperty="Opacity" To="0" Duration="0:0:0.1"/>
                                                        <DoubleAnimation Storyboard.TargetName="DelBtn" Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)" To="0.8" Duration="0:0:0.1"/>
                                                        <DoubleAnimation Storyboard.TargetName="DelBtn" Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)" To="0.8" Duration="0:0:0.1"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </DataTrigger.ExitActions>
                                        </DataTrigger>
                                    </DataTemplate.Triggers>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>
                </Border>


                <!-- 右侧：大图预览区域 -->
                <Border Grid.Column="1" Margin="12,0,0,0" 
                        Style="{StaticResource FluentCardStyle}" Padding="8" ClipToBounds="True">

                    <Grid>
                        <!-- 动态大小的背景棋盘格 -->
                        <Border x:Name="ImageBackgroundBorder" 
                                HorizontalAlignment="Center" VerticalAlignment="Center"
                                Background="{StaticResource CheckerboardBrush}"
                                Visibility="Hidden" CornerRadius="4">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="15" ShadowDepth="0" Opacity="0.2" Color="Black"/>
                            </Border.Effect>
                            <Rectangle Fill="{DynamicResource CheckerboardDarkBrush}" Opacity="0.1"/>
                        </Border>

                        <!-- 预览图 -->
                        <Image x:Name="LargePreviewImage" 
                               Stretch="Uniform" 
                               RenderOptions.BitmapScalingMode="NearestNeighbor"
                               SizeChanged="LargePreviewImage_SizeChanged"
                               RenderTransformOrigin="0.5,0.5">
                            <Image.RenderTransform>
                                <ScaleTransform x:Name="PreviewTransform" ScaleX="1" ScaleY="1"/>
                            </Image.RenderTransform>
                        </Image>

                        <TextBlock x:Name="PreviewHintText" Text="{DynamicResource L_Ico_PreviewHint}" 
                                    VerticalAlignment="Center" HorizontalAlignment="Center"
                                    Foreground="{DynamicResource TextSecondaryBrush}"
                                    Visibility="Collapsed" IsHitTestVisible="False"/>

                        <!-- === 新增：左上角“预览”标签 === -->
                        <Border HorizontalAlignment="Left" VerticalAlignment="Top"
                                Margin="4"
                                Background="{DynamicResource SystemAccentBrush}" 
                                CornerRadius="4" IsHitTestVisible="False" Opacity="0.8">
                            <TextBlock Text="{DynamicResource L_Common_Preview}" 
                                       Margin="8,2,8,2"
                                       Foreground="{DynamicResource TextInverseBrush}" 
                                       FontSize="10" 
                                       FontWeight="Bold"
                                       VerticalAlignment="Center"/>
                        </Border>
                    </Grid>
                </Border>
            </Grid>

            <!-- 底部按钮 -->
            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="12,1,12,12" >
                <Button Content="{DynamicResource L_Common_Cancel}" Width="80" Height="32" Margin="0,0,8,0"
                        Style="{DynamicResource Win11SecondaryButtonStyle}" Click="OnCancelClick"/>
                <Button Content="{DynamicResource L_Common_OK}" Width="80" Height="32"
                        Style="{DynamicResource Win11PrimaryButtonStyle}" Click="OnSaveClick"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
