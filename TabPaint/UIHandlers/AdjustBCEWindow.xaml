<Window x:Class="TabPaint.AdjustBCEWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:local="clr-namespace:TabPaint"
        Title="{DynamicResource L_AdjustBCE_Title}" Height="400" Width="380"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="Transparent"
        FontFamily="Microsoft YaHei UI, Segoe UI, sans-serif"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="ClearType"
        FocusManager.FocusedElement="{Binding ElementName=BrightnessBox}">

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="32"  
                      GlassFrameThickness="-1" 
                      ResizeBorderThickness="4"
                      CornerRadius="0"/>
    </WindowChrome.WindowChrome>

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Resources/SubWindowStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <!-- 可以在这里复制 AdjustTTSWindow 中的 NumberInputStyle 等样式 -->
        </ResourceDictionary>
    </Window.Resources>

    <Border Background="{DynamicResource PanelBackgroundBrush}" 
            BorderBrush="{DynamicResource BorderBrush}" 
            BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 标题栏 -->

            <Border Grid.Row="0" BorderBrush="{DynamicResource BorderLightBrush}" BorderThickness="0,0,0,1" Background="{DynamicResource PanelBackgroundBrush}">
                    <Grid MouseLeftButtonDown="TitleBar_MouseDown">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Image Grid.Column="0" Source="pack://application:,,,/Resources/TabPaint.ico" 
                           Width="20" Height="20" Margin="10,0,8,0" 
                           RenderOptions.BitmapScalingMode="HighQuality"/>

                    <TextBlock Grid.Column="1" Text="{DynamicResource L_AdjustBCE_Title}" 
                               VerticalAlignment="Center" Foreground="{DynamicResource TextSecondaryBrush}"/>

                        <Button Grid.Column="2" Click="Cancel_Click" Width="32" Height="32" 
                            WindowChrome.IsHitTestVisibleInChrome="True" Background="Transparent" BorderThickness="0" Padding="0" Style="{DynamicResource WindowCloseButtonStyle}"/>
                    </Grid>
                </Border>


            <Border Grid.Row="1" 
                    Background="{DynamicResource WindowBackgroundBrush}" 
                    BorderThickness="0,1,0,0" 
                    BorderBrush="{DynamicResource BorderLightBrush}">
                <StackPanel Orientation="Vertical" Margin="24,15,24,15">

                    <!-- 亮度 -->
                    <Grid Margin="0,0,0,2">
                        <TextBlock Text="{DynamicResource L_AdjustBCE_Brightness}" Style="{StaticResource LabelStyle}"/>
                        <TextBox x:Name="BrightnessBox" 
                                 Style="{StaticResource NumberInputStyle}" 
                                 Text="0"
                                 PreviewTextInput="NumberValidationTextBox"
                                 TextChanged="TextBox_TextChanged"/>
                    </Grid>
                    <Slider x:Name="BrightnessSlider" Minimum="-100" Maximum="100" Value="0"
                            TickFrequency="1" IsSnapToTickEnabled="True"
                            ValueChanged="Slider_ValueChanged"
                            Thumb.DragStarted="Slider_DragStarted" 
                            Thumb.DragCompleted="Slider_DragCompleted"
                            MouseDoubleClick="Slider_MouseDoubleClick"
                            Margin="0,0,0,12"/>

                    <!-- 对比度 -->
                    <Grid Margin="0,0,0,2">
                        <TextBlock Text="{DynamicResource L_AdjustBCE_Contrast}" Style="{StaticResource LabelStyle}"/>
                        <TextBox x:Name="ContrastBox" 
                                 Style="{StaticResource NumberInputStyle}" 
                                 Text="0"
                                 PreviewTextInput="NumberValidationTextBox"
                                 TextChanged="TextBox_TextChanged"/>
                    </Grid>
                    <Slider x:Name="ContrastSlider" Minimum="-100" Maximum="100" Value="0"
                            TickFrequency="1" IsSnapToTickEnabled="True"
                            ValueChanged="Slider_ValueChanged"
                            Thumb.DragStarted="Slider_DragStarted" 
                            Thumb.DragCompleted="Slider_DragCompleted"
                            MouseDoubleClick="Slider_MouseDoubleClick"
                            Margin="0,0,0,12"/>

                    <!-- 曝光 -->
                    <Grid Margin="0,0,0,2">
                        <TextBlock Text="{DynamicResource L_AdjustBCE_Exposure}" Style="{StaticResource LabelStyle}"/>
                        <TextBox x:Name="ExposureBox" 
                                 Style="{StaticResource NumberInputStyle}" 
                                 Text="0.0"
                                 PreviewTextInput="NumberValidationTextBox"
                                 TextChanged="TextBox_TextChanged"/>
                    </Grid>
                    <Slider x:Name="ExposureSlider" Minimum="-2" Maximum="2" Value="0"
                            TickFrequency="0.1" IsSnapToTickEnabled="True"
                            ValueChanged="Slider_ValueChanged"
                            Thumb.DragStarted="Slider_DragStarted" 
                            Thumb.DragCompleted="Slider_DragCompleted"
                            MouseDoubleClick="Slider_MouseDoubleClick"
                            Margin="0,0,0,5"/>
                </StackPanel>
            </Border>
            <!-- Row 2: 新增直方图区域 -->
            <Border Grid.Row="2" Background="{DynamicResource WindowBackgroundBrush}" Padding="24,0,24,10">
                <Grid>
                    <!-- 背景框，可选 -->
                    <Border BorderBrush="{DynamicResource BorderLightBrush}" BorderThickness="0,0,0,1" Opacity="0.5" VerticalAlignment="Bottom"/>

                    <Grid x:Name="HistogramGrid" VerticalAlignment="Bottom" Height="60" Opacity="0.9">
                        <Grid.OpacityMask>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Offset="0" Color="Transparent"/>
                                <GradientStop Offset="0.2" Color="Black"/>
                            </LinearGradientBrush>
                        </Grid.OpacityMask>

                        <!-- 红色通道 -->
                        <Polyline x:Name="HistoRed" StrokeThickness="1" Fill="#66FF0000" Stroke="#88FF0000" Points="0,60 255,60">
                            <Polyline.Effect>
                                <BlurEffect Radius="2" RenderingBias="Performance"/>
                            </Polyline.Effect>
                        </Polyline>
                        <!-- 绿色通道 -->
                        <Polyline x:Name="HistoGreen" StrokeThickness="1" Fill="#6600FF00" Stroke="#8800FF00" Points="0,60 255,60">
                            <Polyline.Effect>
                                <BlurEffect Radius="2" RenderingBias="Performance"/>
                            </Polyline.Effect>
                        </Polyline>
                        <!-- 蓝色通道 -->
                        <Polyline x:Name="HistoBlue" StrokeThickness="1" Fill="#660000FF" Stroke="#880000FF" Points="0,60 255,60">
                            <Polyline.Effect>
                                <BlurEffect Radius="2" RenderingBias="Performance"/>
                            </Polyline.Effect>
                        </Polyline>

                    </Grid>
                </Grid>
            </Border>
            <Border Grid.Row="3" 
                    Background="{DynamicResource PanelBackgroundBrush}" 
                    Padding="15,12" 
                    BorderThickness="0,1,0,0" 
                    BorderBrush="{DynamicResource BorderLightBrush}">
                <Grid>
                    <!-- 左侧：重置按钮 -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                        <Button Content="{DynamicResource L_Common_Reset}" Width="60" Click="Reset_Click"/>
                    </StackPanel>

                    <!-- 右侧：确定/取消 -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="{DynamicResource L_Common_OK}" Width="80" Margin="0,0,8,0" Click="Ok_Click" Style="{StaticResource AccentButtonStyle}" IsDefault="True"/>
                        <Button Content="{DynamicResource L_Common_Cancel}" Width="80" Click="Cancel_Click" IsCancel="True"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
