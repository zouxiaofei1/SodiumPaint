<Window x:Class="TabPaint.AdjustTTSWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TabPaint"
        mc:Ignorable="d"
        Title="色彩调整" Height="290" Width="380"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="Transparent"
        FontFamily="Microsoft YaHei UI, Segoe UI, sans-serif"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="ClearType">

    <!-- 扩展客户区到标题栏 -->
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="32"  
                      GlassFrameThickness="-1" 
                      ResizeBorderThickness="4"
                      CornerRadius="0"/>
    </WindowChrome.WindowChrome>

    <Window.Resources>
        <!-- Fluent 风格按钮 -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource ButtonBackgroundBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource ButtonBorderBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,4"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="MinHeight" Value="28"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource ButtonHoverBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource ButtonPressedBrush}"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="{DynamicResource BorderDarkBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 强调色按钮 -->
        <Style x:Key="AccentButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="{DynamicResource SystemAccentBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextInverseBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"
                                              TextElement.Foreground="{TemplateBinding Foreground}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource SystemAccentHoverBrush}"/>
                                <Setter Property="Foreground" Value="{DynamicResource TextInverseBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource SystemAccentPressedBrush}"/>
                                <Setter Property="Foreground" Value="{DynamicResource TextInverseBrush}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource SystemAccentDisabledBrush}"/>
                                <Setter Property="Foreground" Value="{DynamicResource TextDisabledBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 圆形滑块样式 -->
        <Style x:Key="SliderThumbStyle" TargetType="{x:Type Thumb}">
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="Height" Value="18"/>
            <Setter Property="Width" Value="18"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Thumb}">
                        <Ellipse x:Name="Ellipse" Fill="{DynamicResource SystemAccentPressedBrush}" Stroke="{DynamicResource SliderThumbStaticBrush}" StrokeThickness="1"/>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Ellipse" Property="Fill" Value="{DynamicResource ChromeLowBrush}"/>
                                <Setter TargetName="Ellipse" Property="Stroke" Value="{DynamicResource SliderThumbHoverBrush}"/>
                            </Trigger>
                            <Trigger Property="IsDragging" Value="True">
                                <Setter TargetName="Ellipse" Property="Fill" Value="{DynamicResource ButtonBorderBrush}"/>
                                <Setter TargetName="Ellipse" Property="Stroke" Value="{DynamicResource SystemAccentPressedBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Slider 整体样式 -->
        <Style TargetType="Slider">
            <Setter Property="IsMoveToPointEnabled" Value="True"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Slider}">
                        <Grid Background="Transparent" VerticalAlignment="Center">
                            <!-- 轨道 -->
                            <Border x:Name="TrackBackground" Height="4" CornerRadius="2" 
                                    Background="{DynamicResource SliderTrackBackgroundBrush}" VerticalAlignment="Center" Margin="5,0"/>
                            <!-- 滑块 -->
                            <Track x:Name="PART_Track">
                                <Track.Thumb>
                                    <Thumb Style="{StaticResource SliderThumbStyle}" VerticalAlignment="Center"/>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="TextBlock" x:Key="LabelStyle">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- 数字输入框样式 -->
        <Style TargetType="TextBox" x:Key="NumberInputStyle">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="{DynamicResource TextControlBrush}"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Width" Value="45"/>
            <Setter Property="Padding" Value="0,2"/>
            <Setter Property="TextAlignment" Value="Right"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="{DynamicResource TextTertiaryBrush}"/>
                            </Trigger>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter Property="BorderBrush" Value="{DynamicResource SystemAccentBrush}"/>
                                <Setter Property="Background" Value="{DynamicResource ChromeLowBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <!-- 主体边框 -->
    <Border Background="{DynamicResource PanelBackgroundBrush}" BorderBrush="{DynamicResource BorderMediumBrush}" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <!-- 标题栏 -->
                <RowDefinition Height="*"/>
                <!-- 内容 -->
                <RowDefinition Height="Auto"/>
                <!-- 按钮 -->
            </Grid.RowDefinitions>

            <!-- 标题栏 -->
            <Grid Grid.Row="0" MouseLeftButtonDown="TitleBar_MouseDown" Background="Transparent">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Image x:Name="AppIcon" 
                       Grid.Column="0"
                       Source="pack://application:,,,/Resources/TabPaint.ico" 
                       Width="16" Height="16" 
                       Margin="10,0,8,0"
                       VerticalAlignment="Center"
                       RenderOptions.BitmapScalingMode="HighQuality"/>

                <TextBlock Grid.Column="1" 
                           Text="色彩调整" 
                           VerticalAlignment="Center" 
                           HorizontalAlignment="Left"
                           FontSize="12" 
                           Foreground="{DynamicResource TextSecondaryBrush}"/>
            </Grid>

            <!-- 内容区域 -->
            <Border Grid.Row="1" Background="{DynamicResource WindowBackgroundBrush}" Margin="0,0,0,0" BorderThickness="0,1,0,0" BorderBrush="{DynamicResource BorderLightBrush}">
                <StackPanel Orientation="Vertical" Margin="24,15,24,15">

                    <!-- 色温 Temperature -->
                    <Grid Margin="0,0,0,2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="色温" Style="{StaticResource LabelStyle}"/>
                        <TextBox Style="{StaticResource NumberInputStyle}" Grid.Column="1"
                             Text="{Binding ElementName=TemperatureSlider, Path=Value, UpdateSourceTrigger=LostFocus, StringFormat=N0}"
                             PreviewTextInput="NumberValidationTextBox"
                             TextChanged="Input_TextChanged"
                             Tag="{Binding ElementName=TemperatureSlider}"/>
                    </Grid>
                    <Slider x:Name="TemperatureSlider" Minimum="-100" Maximum="100" Value="0"
                            TickFrequency="1" IsSnapToTickEnabled="True"
                            ValueChanged="Slider_ValueChanged"
                            Thumb.DragStarted="Slider_DragStarted" 
                            Thumb.DragCompleted="Slider_DragCompleted"
                            MouseDoubleClick="Slider_MouseDoubleClick" 
                            Margin="0,0,0,12"/>

                    <!-- 色调 Tint -->
                    <Grid Margin="0,0,0,2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="色调" Style="{StaticResource LabelStyle}"/>
                        <TextBox Style="{StaticResource NumberInputStyle}" Grid.Column="1"
                             Text="{Binding ElementName=TintSlider, Path=Value, UpdateSourceTrigger=LostFocus, StringFormat=N0}"
                             PreviewTextInput="NumberValidationTextBox"
                             TextChanged="Input_TextChanged"
                             Tag="{Binding ElementName=TintSlider}"/>
                    </Grid>
                    <Slider x:Name="TintSlider" Minimum="-100" Maximum="100" Value="0"
                            TickFrequency="1" IsSnapToTickEnabled="True"
                            ValueChanged="Slider_ValueChanged"
                            Thumb.DragStarted="Slider_DragStarted" 
                            Thumb.DragCompleted="Slider_DragCompleted"
                            MouseDoubleClick="Slider_MouseDoubleClick" 
                            Margin="0,0,0,12"/>

                    <!-- 饱和度 Saturation -->
                    <Grid Margin="0,0,0,2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="饱和度" Style="{StaticResource LabelStyle}"/>
                        <TextBox Style="{StaticResource NumberInputStyle}" Grid.Column="1"
                             Text="{Binding ElementName=SaturationSlider, Path=Value, UpdateSourceTrigger=LostFocus, StringFormat=N0}"
                             PreviewTextInput="NumberValidationTextBox"
                             TextChanged="Input_TextChanged"
                             Tag="{Binding ElementName=SaturationSlider}"/>
                    </Grid>
                    <Slider x:Name="SaturationSlider" Minimum="-100" Maximum="100" Value="0"
                            TickFrequency="1" IsSnapToTickEnabled="True"
                            ValueChanged="Slider_ValueChanged"
                            Thumb.DragStarted="Slider_DragStarted" 
                            Thumb.DragCompleted="Slider_DragCompleted"
                            MouseDoubleClick="Slider_MouseDoubleClick" 
                            Margin="0,0,0,5"/>
                </StackPanel>
            </Border>

            <!-- 底部按钮栏 -->
            <Border Grid.Row="2" Background="{DynamicResource PanelBackgroundBrush}" Padding="15,12" BorderThickness="0,1,0,0" BorderBrush="{DynamicResource BorderLightBrush}">
                <Grid>
                    <!-- 左侧：重置按钮 -->
                    <Button Content="重置" Width="80" HorizontalAlignment="Left" Click="Reset_Click"/>

                    <!-- 右侧：确定/取消 -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="确定" Width="80" Margin="0,0,8,0" Click="Ok_Click" Style="{StaticResource AccentButtonStyle}" IsDefault="True"/>
                        <Button Content="取消" Width="80" Click="Cancel_Click" IsCancel="True"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
