<Window x:Class="TabPaint.AdjustTTSWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TabPaint"
        mc:Ignorable="d"
        Title="{DynamicResource L_AdjustTTS_Title}" Height="290" Width="380"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="Transparent"
        FontFamily="Microsoft YaHei UI, Segoe UI, sans-serif"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="ClearType">

    <!-- 扩展客户区到标题栏 -->
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="32"  
                      GlassFrameThickness="-1" 
                      ResizeBorderThickness="4"
                      CornerRadius="0"/>
    </WindowChrome.WindowChrome>

    <Window.Resources>


        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Resources/SubWindowStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <!-- 可以在这里复制 AdjustTTSWindow 中的 NumberInputStyle 等样式 -->
        </ResourceDictionary>
    </Window.Resources>

    <!-- 主体边框 -->
    <Border Background="{DynamicResource PanelBackgroundBrush}" BorderBrush="{DynamicResource BorderMediumBrush}" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <!-- 标题栏 -->
                <RowDefinition Height="*"/>
                <!-- 内容 -->
                <RowDefinition Height="Auto"/>
                <!-- 按钮 -->
            </Grid.RowDefinitions>

            <!-- 标题栏 -->
            <Grid Grid.Row="0" MouseLeftButtonDown="TitleBar_MouseDown" Background="Transparent">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Image x:Name="AppIcon" 
                       Grid.Column="0"
                       Source="pack://application:,,,/Resources/TabPaint.ico" 
                       Width="16" Height="16" 
                       Margin="10,0,8,0"
                       VerticalAlignment="Center"
                       RenderOptions.BitmapScalingMode="HighQuality"/>

                <TextBlock Grid.Column="1" 
                           Text="{DynamicResource L_AdjustTTS_Title}" 
                           VerticalAlignment="Center" 
                           HorizontalAlignment="Left"
                           FontSize="12" 
                           Foreground="{DynamicResource TextSecondaryBrush}"/>
            </Grid>

            <!-- 内容区域 -->
            <Border Grid.Row="1" Background="{DynamicResource WindowBackgroundBrush}" Margin="0,0,0,0" BorderThickness="0,1,0,0" BorderBrush="{DynamicResource BorderLightBrush}">
                <StackPanel Orientation="Vertical" Margin="24,15,24,15">

                    <!-- 色温 Temperature -->
                    <Grid Margin="0,0,0,2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="{DynamicResource L_AdjustTTS_Temperature}" Style="{StaticResource LabelStyle}"/>
                        <TextBox Style="{StaticResource NumberInputStyle}" Grid.Column="1"
                             Text="{Binding ElementName=TemperatureSlider, Path=Value, UpdateSourceTrigger=LostFocus, StringFormat=N0}"
                             PreviewTextInput="NumberValidationTextBox"
                             TextChanged="Input_TextChanged"
                             Tag="{Binding ElementName=TemperatureSlider}"/>
                    </Grid>
                    <Slider x:Name="TemperatureSlider" Minimum="-100" Maximum="100" Value="0"
                            TickFrequency="1" IsSnapToTickEnabled="True"
                            ValueChanged="Slider_ValueChanged"
                            Thumb.DragStarted="Slider_DragStarted" 
                            Thumb.DragCompleted="Slider_DragCompleted"
                            MouseDoubleClick="Slider_MouseDoubleClick" 
                            Margin="0,0,0,12"/>

                    <!-- 色调 Tint -->
                    <Grid Margin="0,0,0,2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="{DynamicResource L_AdjustTTS_Tint}" Style="{StaticResource LabelStyle}"/>
                        <TextBox Style="{StaticResource NumberInputStyle}" Grid.Column="1"
                             Text="{Binding ElementName=TintSlider, Path=Value, UpdateSourceTrigger=LostFocus, StringFormat=N0}"
                             PreviewTextInput="NumberValidationTextBox"
                             TextChanged="Input_TextChanged"
                             Tag="{Binding ElementName=TintSlider}"/>
                    </Grid>
                    <Slider x:Name="TintSlider" Minimum="-100" Maximum="100" Value="0"
                            TickFrequency="1" IsSnapToTickEnabled="True"
                            ValueChanged="Slider_ValueChanged"
                            Thumb.DragStarted="Slider_DragStarted" 
                            Thumb.DragCompleted="Slider_DragCompleted"
                            MouseDoubleClick="Slider_MouseDoubleClick" 
                            Margin="0,0,0,12"/>

                    <!-- 饱和度 Saturation -->
                    <Grid Margin="0,0,0,2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="{DynamicResource L_AdjustTTS_Saturation}" Style="{StaticResource LabelStyle}"/>
                        <TextBox Style="{StaticResource NumberInputStyle}" Grid.Column="1"
                             Text="{Binding ElementName=SaturationSlider, Path=Value, UpdateSourceTrigger=LostFocus, StringFormat=N0}"
                             PreviewTextInput="NumberValidationTextBox"
                             TextChanged="Input_TextChanged"
                             Tag="{Binding ElementName=SaturationSlider}"/>
                    </Grid>
                    <Slider x:Name="SaturationSlider" Minimum="-100" Maximum="100" Value="0"
                            TickFrequency="1" IsSnapToTickEnabled="True"
                            ValueChanged="Slider_ValueChanged"
                            Thumb.DragStarted="Slider_DragStarted" 
                            Thumb.DragCompleted="Slider_DragCompleted"
                            MouseDoubleClick="Slider_MouseDoubleClick" 
                            Margin="0,0,0,5"/>
                </StackPanel>
            </Border>

            <!-- 底部按钮栏 -->
            <Border Grid.Row="2" Background="{DynamicResource PanelBackgroundBrush}" Padding="15,12" BorderThickness="0,1,0,0" BorderBrush="{DynamicResource BorderLightBrush}">
                <Grid>
                    <!-- 左侧：重置按钮 -->
                    <Button Content="{DynamicResource L_Common_Reset}" Width="80" HorizontalAlignment="Left" Click="Reset_Click"/>

                    <!-- 右侧：确定/取消 -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="{DynamicResource L_Common_OK}" Width="80" Margin="0,0,8,0" Click="Ok_Click" Style="{StaticResource AccentButtonStyle}" IsDefault="True"/>
                        <Button Content="{DynamicResource L_Common_Cancel}" Width="80" Click="Cancel_Click" IsCancel="True"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
