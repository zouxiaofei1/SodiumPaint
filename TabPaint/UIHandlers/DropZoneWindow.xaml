<Window x:Class="TabPaint.UIHandlers.DropZoneWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DropZoneWindow" Height="100" Width="800"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        Topmost="True" ShowInTaskbar="False">
    <Grid>
        <Border Margin="10" CornerRadius="15" Background="{DynamicResource GlassBackgroundDragOverlay}" BorderBrush="{DynamicResource BorderMediumBrush}" BorderThickness="2" SnapsToDevicePixels="True">
            <Border.Effect>
                <DropShadowEffect BlurRadius="15" Opacity="0.3" ShadowDepth="0"/>
            </Border.Effect>
            <Grid>
                <Rectangle Stroke="{DynamicResource BorderMediumBrush}" StrokeThickness="2" RadiusX="12" RadiusY="12" Margin="10" StrokeDashArray="4 2"/>
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="{DynamicResource L_Drag_DropZone_Title}" Foreground="{DynamicResource TextInverseBrush}" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"/>
                    <TextBlock Text="{DynamicResource L_Drag_DropZone_Desc}" Foreground="{DynamicResource BorderMediumBrush}" FontSize="14" Margin="0,5,0,0" HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
