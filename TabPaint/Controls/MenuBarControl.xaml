<UserControl x:Class="TabPaint.Controls.MenuBarControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TabPaint.Controls"
             xmlns:services="clr-namespace:TabPaint.Services"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="800">

    <UserControl.Resources>
        <ResourceDictionary>

        </ResourceDictionary>
    </UserControl.Resources>

    <Border Height="36" Background="{DynamicResource GlassBackgroundLowBrush}" AllowDrop="True" MouseLeftButtonDown="OnRootBorderMouseDown">
        <DockPanel LastChildFill="False" VerticalAlignment="Center" Margin="1,0">
            <Menu DockPanel.Dock="Left" Background="Transparent" BorderThickness="0" FontSize="14" Padding="0" Margin="0">
                <!-- 文件菜单 -->
                <MenuItem Header="{DynamicResource L_Menu_File}" 
              Style="{StaticResource ModernMenuItemStyle}" 
              SubmenuOpened="OnFileMenuOpened" 
              Click="MenuItem_Click">
                    <MenuItem Visibility="Collapsed"/>
                    <!-- 占位符 -->
                </MenuItem>

                <!-- 编辑菜单 -->
                <MenuItem Header="{DynamicResource L_Menu_Edit}" 
              Style="{StaticResource ModernMenuItemStyle}"
              SubmenuOpened="OnEditMenuOpened">
                    <MenuItem Visibility="Collapsed"/>
                    <!-- 占位符 -->
                </MenuItem>

                <!-- 效果菜单 -->
                <MenuItem Header="{DynamicResource L_Menu_Effect}" 
              Style="{StaticResource ModernMenuItemStyle}"
              SubmenuOpened="OnEffectMenuOpened">
                    <MenuItem Visibility="Collapsed"/>
                    <!-- 占位符 -->
                </MenuItem>
            </Menu>
            <!-- 快捷操作按钮 -->
            <Border DockPanel.Dock="Left" Width="1" Background="{DynamicResource BorderMediumBrush}" Margin="2,4"/>
            <StackPanel DockPanel.Dock="Left" Orientation="Horizontal" VerticalAlignment="Center">
                <Button Margin="6,0" services:ShortcutService.BaseToolTip="L_Menu_QA_Save" services:ShortcutService.ShortcutKey="File.Save" Click="OnSaveClick" Style="{StaticResource RoundedMenuButtonStyle}">
                    <Path Data="{DynamicResource Save_Normal_Image}" Stretch="Uniform" Fill="{DynamicResource IconFillBrush}" Width="16" Height="16"/>
                </Button>

                <Border DockPanel.Dock="Left" Width="1" Background="{DynamicResource BorderMediumBrush}" Margin="2,4"/>
                <Button Margin="6,0" services:ShortcutService.BaseToolTip="L_Menu_QA_Undo" services:ShortcutService.ShortcutKey="Edit.Undo" x:Name="UndoButton" Click="OnUndoClick" IsEnabled="False" Style="{StaticResource RoundedMenuButtonStyle}">
                    <Path x:Name="UndoIcon" Data="{DynamicResource Undo_Image}" Stretch="Uniform" Fill="{DynamicResource IconFillBrush}" Width="16" Height="16"/>
                </Button>
                <Button services:ShortcutService.BaseToolTip="L_Menu_QA_Redo" services:ShortcutService.ShortcutKey="Edit.Redo" x:Name="RedoButton" Click="OnRedoClick" IsEnabled="False" Style="{StaticResource RoundedMenuButtonStyle}">
                    <Path x:Name="RedoIcon" Data="{DynamicResource Redo_Image}" Stretch="Uniform" Fill="{DynamicResource IconFillBrush}" Width="16" Height="16"/>
                </Button>

                <Border DockPanel.Dock="Left" Width="1" Background="{DynamicResource BorderMediumBrush}" Margin="6,4"/>

                <Button Margin="0,0,6,0" Width="32" services:ShortcutService.BaseToolTip="L_Menu_QA_NewTab" services:ShortcutService.ShortcutKey="File.NewTab" x:Name="NewTabButton" Click="OnNewTabClick" Style="{StaticResource RoundedMenuButtonStyle}">
                    <Path Data="M19,13H13V19H11V13H5V11H11V5H13V11H19V13Z" Stretch="Uniform" Fill="{DynamicResource IconFillBrush}" Width="12" Height="12"/>
                </Button>
                <Button Margin="0,0,6,0" 
                        services:ShortcutService.BaseToolTip="L_Menu_QA_DiscardAll" 
                        Click="OnDiscardAllClick" Style="{StaticResource RoundedMenuButtonStyle}">
                    <Path Data="{DynamicResource Reset_Image}" Stretch="Uniform" Fill="{DynamicResource IconFillBrush}" Width="16" Height="16"/>
                </Button>
            </StackPanel>

            <Button DockPanel.Dock="Right" Margin="0,5,10,5" Padding="2" 
                    services:ShortcutService.BaseToolTip="L_Menu_QA_Settings" 
                    Click="OnSettingsClick" Style="{StaticResource RoundedMenuButtonStyle}">
                <Path Data="{DynamicResource Settings_Image}" Stretch="Uniform" Fill="{DynamicResource IconFillBrush}" Width="18" Height="18"/>
            </Button>
        </DockPanel>
    </Border>
</UserControl>
