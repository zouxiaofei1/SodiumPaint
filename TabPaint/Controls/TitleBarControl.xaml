<UserControl x:Class="TabPaint.Controls.TitleBarControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TabPaint.Controls"
             xmlns:services="clr-namespace:TabPaint.Services"
                 PreviewMouseDoubleClick   ="Window_DoubleClick"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="800">


    <Border Height="28" Background="{DynamicResource GlassBackgroundLowBrush}" VerticalAlignment="Top" HorizontalAlignment="Stretch" MouseLeftButtonDown="OnTitleBarMouseLeftButtonDown" AllowDrop="True">

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Image Grid.Column="0" x:Name="AppIcon" Width="20" Height="20" Margin="8,0,8,0"    PreviewMouseMove="OnAppIconPreviewMouseMove"  PreviewMouseLeftButtonDown="OnAppIconPreviewMouseDown" MouseDown="OnAppIconMouseDown">
        
            </Image>

            <TextBlock Grid.Column="1" 
                       x:Name="TitleTextBlock" 
                       Text="TabPaint" 
                       VerticalAlignment="Center" 
                       FontSize="12" 
                       Style="{StaticResource TitleTextStyle}"
                       TextTrimming="CharacterEllipsis" 
                       TextWrapping="NoWrap"
                       Margin="0,0,10,0"/>

            <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right">
                <Button Width="40" Height="30" x:Name="HelpButton"
            services:ShortcutService.BaseToolTip="L_TitleBar_Help"
            Click="OnHelpClick"
            Style="{StaticResource TitleBarButtonStyle}"
            Margin="0,0,4,0">
                    <Path Data="{DynamicResource Help_Image}" Stretch="Uniform" Fill="{DynamicResource IconFillBrush}" Width="16" Height="16"/>
                </Button>

                <Popup x:Name="HelpHintPopup" PlacementTarget="{Binding ElementName=HelpButton}" Placement="Bottom" AllowsTransparency="True" PopupAnimation="Fade" VerticalOffset="2" StaysOpen="False" HorizontalOffset="-80">
                    <Grid Margin="10">
                        <!-- 气泡小箭头 -->
                        <Path Data="M 0,8 L 8,0 L 16,8 Z" Fill="{DynamicResource SystemAccentColorLightBrush}" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,0,91,0"/>
                        
                        <Border Background="{DynamicResource GlassBackgroundBrush}" 
                                BorderBrush="{DynamicResource SystemAccentColorLightBrush}"
                                BorderThickness="1"
                                CornerRadius="8" 
                                Padding="12,8" 
                                Margin="0,7,0,0">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="15" ShadowDepth="0" Opacity="0.2" Color="Black"/>
                            </Border.Effect>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="💡" Margin="0,0,8,0" VerticalAlignment="Center" FontSize="14"/>
                                <TextBlock Text="{DynamicResource L_Hint_ClickHelp}" 
                                           Foreground="{DynamicResource TextPrimaryBrush}" 
                                           FontSize="13" 
                                           FontWeight="Medium"
                                           VerticalAlignment="Center"/>
                                
                                <Button Click="CloseHelpHint_Click" 
                                        Style="{StaticResource TitleBarButtonStyle}"
                                        Width="24" Height="24"
                                        Margin="12,0,-4,0"
                                        Padding="0"
                                        Background="Transparent"
                                        VerticalAlignment="Center">
                                    <Path Data="M0,0 L8,8 M8,0 L0,8" 
                                          Stroke="{DynamicResource TextSecondaryBrush}" 
                                          StrokeThickness="1.2" 
                                          Width="8" Height="8" 
                                          Stretch="Uniform" 
                                          HorizontalAlignment="Center" 
                                          VerticalAlignment="Center"/>
                                </Button>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Popup>
                
                <Button Width="40" Height="30" x:Name="ModeSwitchButton" 
                        services:ShortcutService.BaseToolTip="L_TitleBar_ToggleMode" 
                        services:ShortcutService.ShortcutKey="View.ToggleMode" 
                        Click="OnModeSwitchClick" 
                        Style="{StaticResource TitleBarButtonStyle}"
                        Margin="0,0,8,0" >
                    <Path x:Name="ModeIconImage" Data="{DynamicResource View_Mode_Image}" Stretch="Uniform" Fill="{DynamicResource IconFillBrush}" Width="16" Height="16"/>
                </Button>

                <Button Width="40" Height="30" ToolTip="{DynamicResource L_TitleBar_Minimize}" Click="OnMinimizeClick" Style="{StaticResource TitleBarButtonStyle}">
                    <Viewbox Width="10" Height="10">
                        <Path Stroke="{DynamicResource TextPrimaryBrush}" StrokeThickness="1" Data="M0,2 L12,2"/>
                    </Viewbox>
                </Button>
                <Button Width="40" Height="30" Name="MaxRestoreButton" ToolTip="{DynamicResource L_TitleBar_Maximize}" Click="OnMaximizeRestoreClick" Style="{StaticResource TitleBarButtonStyle}">
                    <Viewbox Width="10" Height="10">
                        <Rectangle Stroke="{DynamicResource TextPrimaryBrush}" StrokeThickness="1" Width="12" Height="12" RadiusX="2" RadiusY="2"/>
                    </Viewbox>
                </Button>
                <Button Width="48" Height="30" ToolTip="{DynamicResource L_TitleBar_Close}" Click="OnCloseClick" Style="{StaticResource CloseButtonStyle}">
                    <Viewbox Width="10" Height="10">
                        <Path Stroke="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}" 
                              StrokeThickness="1" 
                              Data="M0,0 L12,12 M12,0 L0,12"/>
                    </Viewbox>
                </Button>
            </StackPanel>

        </Grid>
    </Border>
</UserControl>
