<UserControl x:Class="TabPaint.Controls.TitleBarControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TabPaint.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="800">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Resources/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <!-- 背景色改为 GlassBackgroundLowBrush (0.27 Opacity) 近似原有的 #50FFFFFF -->
    <Border Height="28" Background="{DynamicResource GlassBackgroundLowBrush}" VerticalAlignment="Top" HorizontalAlignment="Stretch" MouseLeftButtonDown="OnTitleBarMouseLeftButtonDown" AllowDrop="True">
        <DockPanel LastChildFill="True">
            <!-- Icon -->
            <Image x:Name="AppIcon" Source="pack://application:,,,/Resources/TabPaint.ico" Width="20" Height="20" Margin="8,0,8,0" MouseLeftButtonDown="OnAppIconMouseDown">
                <Image.ContextMenu>
                    <!-- ContextMenu 背景改为 ControlBackgroundBrush -->
                    <ContextMenu x:Name="LogoContextMenu" Style="{StaticResource Win11ContextMenuStyle}" Background="{DynamicResource ControlBackgroundBrush}">
                        <!-- === 这里复制 MenuBarControl 的文件菜单内容 === -->

                        <MenuItem Header="新建" Style="{StaticResource Win11MenuItemStyle}"  InputGestureText="Ctrl+N" Click="OnNewClick">
                            <MenuItem.Icon>
                                <!-- Fill 改为 IconFillBrush -->
                                <Path Data="{DynamicResource NewFile_Image}" Stretch="Uniform" Fill="{DynamicResource IconFillBrush}" Width="16" Height="16"/>
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem Header="打开" Style="{StaticResource Win11MenuItemStyle}"   InputGestureText="Ctrl+O" Click="OnOpenClick">
                            <MenuItem.Icon>
                                <Path Data="{DynamicResource Open_Folder_Image}" Stretch="Uniform" Fill="{DynamicResource IconFillBrush}" Width="16" Height="16"/>
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem Header="打开新文件夹"  Style="{StaticResource Win11MenuItemStyle}"  InputGestureText="Ctrl+Shift+O" Click="OnOpenWorkspaceClick">
                            <MenuItem.Icon>
                                <Path Data="{DynamicResource Open_Folder_Image}" Stretch="Uniform" Fill="{DynamicResource IconFillBrush}" Width="16" Height="16"/>
                            </MenuItem.Icon>
                        </MenuItem>
                        <Separator Style="{StaticResource MenuSeparator}"/>
                        <MenuItem Header="图片Exif信息" Style="{StaticResource Win11MenuItemStyle}">
                            <!-- 1. 绑定 IsEnabled -->
                            <MenuItem.IsEnabled>
                                <Binding Path="PlacementTarget.DataContext.CurrentImageFullInfo" 
                                         RelativeSource="{RelativeSource AncestorType=ContextMenu}" 
                                         />
                            </MenuItem.IsEnabled>

                            <!-- 2. 图标: Stroke 改为 IconFillBrush -->
                            <MenuItem.Icon>
                                <Path Data="{DynamicResource Info_Image}" 
                                      Stretch="Uniform" Fill="Transparent" Stroke="{DynamicResource IconFillBrush}" StrokeThickness="1.5" 
                                      Width="16" Height="16"/>
                            </MenuItem.Icon>

                            <!-- 3. 子菜单内容 -->
                            <MenuItem StaysOpenOnClick="True">
                                <MenuItem.Template>
                                    <ControlTemplate TargetType="MenuItem">
                                        <!-- 面板背景改为 ChromeLowBrush (#F9F9F9), 边框改为 BorderLightBrush -->
                                        <Border Background="{DynamicResource ChromeLowBrush}" BorderBrush="{DynamicResource BorderLightBrush}" BorderThickness="1" CornerRadius="4" Padding="8" MaxWidth="350">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="*"/>
                                                </Grid.RowDefinitions>

                                                <!-- 标题 Foreground 改为 TextPrimaryBrush -->
                                                <TextBlock Text="详细信息" FontWeight="Bold" Margin="0,0,0,6" Foreground="{DynamicResource TextPrimaryBrush}"/>

                                                <!-- 分割线 Background 改为 BorderBrush -->
                                                <Separator Grid.Row="0" VerticalAlignment="Bottom" Background="{DynamicResource BorderBrush}"/>

                                                <!-- 滚动文本区域 Foreground 改为 TextSecondaryBrush -->
                                                <ScrollViewer Grid.Row="1" MaxHeight="400" VerticalScrollBarVisibility="Auto" Margin="0,6,0,0">
                                                    <TextBlock Text="{Binding Path=PlacementTarget.DataContext.CurrentImageFullInfo, RelativeSource={RelativeSource AncestorType=ContextMenu}}" 
                                                               FontFamily="Consolas" 
                                                               FontSize="11" 
                                                               TextWrapping="Wrap"
                                                               Foreground="{DynamicResource TextSecondaryBrush}"/>
                                                </ScrollViewer>
                                            </Grid>
                                        </Border>
                                    </ControlTemplate>
                                </MenuItem.Template>
                            </MenuItem>
                        </MenuItem>

                        <Separator Style="{StaticResource MenuSeparator}"/>

                        <MenuItem Style="{StaticResource Win11MenuItemStyle}"   Header="保存" InputGestureText="Ctrl+S" Click="OnSaveClick">
                            <MenuItem.Icon>
                                <Path Data="{DynamicResource Save_Normal_Image}" Stretch="Uniform" Fill="{DynamicResource IconFillBrush}" Width="16" Height="16"/>
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem Style="{StaticResource Win11MenuItemStyle}"  Header="另存为" Click="OnSaveAsClick">
                            <MenuItem.Icon>
                                <Path Data="{DynamicResource Save_Button_Image}" Stretch="Uniform" Fill="{DynamicResource IconFillBrush}" Width="16" Height="16"/>
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem Style="{StaticResource Win11MenuItemStyle}"  Header="退出" Click="OnExitClick">
                            <MenuItem.Icon>
                                <Path Data="{DynamicResource Exit_Image}" Stretch="Uniform" Fill="Transparent" Stroke="{DynamicResource IconFillBrush}" StrokeThickness="1.5" Width="16" Height="16"/>
                            </MenuItem.Icon>
                        </MenuItem>
                    </ContextMenu>
                </Image.ContextMenu>
            </Image>

            <!-- Title -->
            <TextBlock x:Name="TitleTextBlock" Text="TabPaint" VerticalAlignment="Center" FontSize="12" Style="{StaticResource TitleTextStyle}"/>

            <!-- Window Buttons -->
            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right">
                <Button Width="40" Height="30" x:Name="ModeSwitchButton" 
                        ToolTip="切换 画图/看图 模式" 
                        Click="OnModeSwitchClick" 
                        Style="{StaticResource TitleBarButtonStyle}"
                        Margin="0,0,8,0">
                    <!-- Icon Fill 改为 IconFillBrush -->
                    <Path x:Name="ModeIconImage"  Data="{DynamicResource View_Mode_Image}" Stretch="Uniform" Fill="{DynamicResource IconFillBrush}" Width="16" Height="16"/>
                </Button>

                <Button Width="40" Height="30" ToolTip="最小化" Click="OnMinimizeClick" Style="{StaticResource TitleBarButtonStyle}">
                    <Viewbox Width="10" Height="10">
                        <!-- Stroke 改为 TextPrimaryBrush -->
                        <Path Stroke="{DynamicResource TextPrimaryBrush}" StrokeThickness="1" Data="M0,2 L12,2"/>
                    </Viewbox>
                </Button>
                <Button Width="40" Height="30" Name="MaxRestoreButton" ToolTip="最大化" Click="OnMaximizeRestoreClick" Style="{StaticResource TitleBarButtonStyle}">
                    <Viewbox Width="10" Height="10">
                        <!-- Stroke 改为 TextPrimaryBrush -->
                        <Rectangle Stroke="{DynamicResource TextPrimaryBrush}" StrokeThickness="1" Width="12" Height="12"/>
                    </Viewbox>
                </Button>
                <Button Width="48" Height="30" ToolTip="退出" Click="OnCloseClick" Style="{StaticResource CloseButtonStyle}">
                    <Viewbox Width="10" Height="10">
                        <!-- 这里的绑定保持不变，因为 CloseButton 样式通常会在 Hover 时反转前景背景色 -->
                        <Path Stroke="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}" 
                              StrokeThickness="1.5" 
                              Data="M0,0 L12,12 M12,0 L0,12"/>
                    </Viewbox>
                </Button>
            </StackPanel>
        </DockPanel>
    </Border>
</UserControl>
