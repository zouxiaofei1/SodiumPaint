<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:services="clr-namespace:TabPaint.Services">
    <ContextMenu  x:Key="LogoContextMenu"  Style="{StaticResource Win11ContextMenuStyle}" Background="{DynamicResource ControlBackgroundBrush}">
        <MenuItem Header="{DynamicResource L_Menu_File_New}"  Tag ="New" Style="{StaticResource Win11MenuItemStyle}"  
                  services:ShortcutService.ShortcutKey="File.New">
            <MenuItem.Icon>
                <Path Data="{DynamicResource NewFile_Image}" Stretch="Uniform" Fill="{DynamicResource IconFillBrush}" Width="16" Height="16"/>
            </MenuItem.Icon>
        </MenuItem>
        <MenuItem Header="{DynamicResource L_Menu_File_Open}" Tag="Open" Style="{StaticResource Win11MenuItemStyle}"   
                  services:ShortcutService.ShortcutKey="File.Open">
            <MenuItem.Icon>
                <Path Data="{DynamicResource Open_Folder_Image}" Stretch="Uniform" Fill="{DynamicResource IconFillBrush}" Width="16" Height="16"/>
            </MenuItem.Icon>
        </MenuItem>
        <MenuItem Header="{DynamicResource L_Menu_File_OpenFolder}" Tag="OpenFolder"  Style="{StaticResource Win11MenuItemStyle}"  
                  services:ShortcutService.ShortcutKey="File.OpenWorkspace">
            <MenuItem.Icon>
                <Path Data="{DynamicResource Open_Folder_Image}" Stretch="Uniform" Fill="{DynamicResource IconFillBrush}" Width="16" Height="16"/>
            </MenuItem.Icon>
        </MenuItem>
        <Separator Style="{StaticResource MenuSeparator}"/>
        <MenuItem Header="{DynamicResource L_TitleBar_ExifInfo}" Tag="Exif" Style="{StaticResource Win11MenuItemStyle}">
            <MenuItem.IsEnabled>
                <Binding Path="PlacementTarget.DataContext.CurrentImageFullInfo" RelativeSource="{RelativeSource AncestorType=ContextMenu}"/>
            </MenuItem.IsEnabled>
            <MenuItem.Icon>
                <Path Data="{DynamicResource Info_Image}" Stretch="Uniform" Fill="Transparent" Stroke="{DynamicResource IconFillBrush}" StrokeThickness="0.8" Width="16" Height="16"/>
            </MenuItem.Icon>
            <MenuItem StaysOpenOnClick="True">
                <MenuItem.Template>
                    <ControlTemplate TargetType="MenuItem">
                        <Border Background="{DynamicResource ChromeLowBrush}" BorderBrush="{DynamicResource BorderLightBrush}" BorderThickness="1" CornerRadius="4" Padding="8" MaxWidth="350">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <TextBlock Text="{DynamicResource L_TitleBar_ExifInfo_Details}" FontWeight="Bold" Margin="0,0,0,6" Foreground="{DynamicResource TextPrimaryBrush}"/>
                                <Separator Grid.Row="0" VerticalAlignment="Bottom" Background="{DynamicResource BorderBrush}"/>
                                <ScrollViewer Grid.Row="1" MaxHeight="400" VerticalScrollBarVisibility="Auto" Margin="0,6,0,0">
                                    <TextBlock Text="{Binding Path=PlacementTarget.DataContext.CurrentImageFullInfo, RelativeSource={RelativeSource AncestorType=ContextMenu}}" 
                                           FontFamily="Consolas" FontSize="11" TextWrapping="Wrap" Foreground="{DynamicResource TextSecondaryBrush}"/>
                                </ScrollViewer>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </MenuItem.Template>
            </MenuItem>
        </MenuItem>
        <Separator Style="{StaticResource MenuSeparator}"/>
        <MenuItem Style="{StaticResource Win11MenuItemStyle}"  Tag="Save" Header="{DynamicResource L_Menu_File_Save}" 
                  services:ShortcutService.ShortcutKey="File.Save">
            <MenuItem.Icon>
                <Path Data="{DynamicResource Save_Normal_Image}" Stretch="Uniform" Fill="{DynamicResource IconFillBrush}" Width="16" Height="16"/>
            </MenuItem.Icon>
        </MenuItem>
        <MenuItem Style="{StaticResource Win11MenuItemStyle}" Tag="SaveAs" Header="{DynamicResource L_Menu_File_SaveAs}"
                  services:ShortcutService.ShortcutKey="File.SaveAs">
            <MenuItem.Icon>
                <Path Data="{DynamicResource Save_Button_Image}" Stretch="Uniform" Fill="{DynamicResource IconFillBrush}" Width="16" Height="16"/>
            </MenuItem.Icon>
        </MenuItem>
        <MenuItem Style="{StaticResource Win11MenuItemStyle}" Tag="Exit" Header="{DynamicResource L_Menu_File_Exit}">
            <MenuItem.Icon>
                <Path Data="{DynamicResource Exit_Image}" Stretch="Uniform" Fill="Transparent" Stroke="{DynamicResource IconFillBrush}" StrokeThickness="1.5" Width="16" Height="16"/>
            </MenuItem.Icon>
        </MenuItem>
    </ContextMenu>
</ResourceDictionary>