<UserControl x:Class="TabPaint.Controls.SelectionRotateFloat"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TabPaint.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="240"
             Visibility="Collapsed"
             MouseDown="UserControl_MouseDown">

    <Border CornerRadius="8" 
            Background="{DynamicResource PanelBackgroundBrush}" 
            BorderBrush="{DynamicResource BorderMediumBrush}" 
            BorderThickness="1"
            Width="240"
            Padding="12,4"
            SnapsToDevicePixels="True">
        <Border.Effect>
            <DropShadowEffect BlurRadius="10" Opacity="0.15" ShadowDepth="2"/>
        </Border.Effect>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="50"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" 
                       Text="{DynamicResource L_Watermark_Angle}" 
                       FontSize="11" 
                       Foreground="{DynamicResource TextPrimaryBrush}"
                       VerticalAlignment="Center"
                       Margin="0,0,8,0"/>

            <Slider Grid.Column="1" 
                    x:Name="RotateSlider"
                    Style="{DynamicResource Win11HorizontalSliderStyle}"
                    Minimum="-180" Maximum="180"
                    Value="0"
                    VerticalAlignment="Center"
                    IsSnapToTickEnabled="True" TickFrequency="1"
                    Margin="0,0,8,0"
                    ValueChanged="RotateSlider_ValueChanged"/>

            <TextBox Grid.Column="2" 
                     x:Name="RotateValueText" 
                     Style="{DynamicResource FluentTextBoxStyle}"
                     FontSize="11"
                     Height="24"
                     Padding="2"
                     TextAlignment="Center"
                     VerticalAlignment="Center"
                     Text="0"
                     TextChanged="RotateValueText_TextChanged"/>
        </Grid>
    </Border>
</UserControl>
