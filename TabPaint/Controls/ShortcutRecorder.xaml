<UserControl x:Class="TabPaint.Controls.ShortcutRecorder"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="200"
             Focusable="True"
             PreviewKeyDown="UserControl_PreviewKeyDown"
             PreviewMouseDown="UserControl_PreviewMouseDown">

    <!-- 
         修改点：
         BorderBrush="#CCCCCC" -> {DynamicResource BorderMediumBrush}
         Background="White"    -> {DynamicResource ControlBackgroundBrush}
    -->
    <Border x:Name="MainBorder" 
            BorderThickness="1" 
            BorderBrush="{DynamicResource BorderMediumBrush}" 
            Background="{DynamicResource ControlBackgroundBrush}" 
            CornerRadius="4">
        <Grid Background="Transparent">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- 显示快捷键文本的区域 -->
            <!-- 
                 修改点：
                 Foreground="#333333" -> {DynamicResource TextControlBrush}
            -->
            <TextBlock x:Name="KeyDisplay" 
                       Text="None" 
                       VerticalAlignment="Center" 
                       Margin="8,0" 
                       Foreground="{DynamicResource TextControlBrush}"
                       IsHitTestVisible="False"/>

            <!-- 清除按钮 (X) -->
            <!-- 
                 修改点：
                 Foreground="Gray" -> {DynamicResource TextSecondaryBrush} 
            -->
            <Button Grid.Column="1" 
                    Content="✕" 
                    Width="24" 
                    BorderThickness="0" 
                    Background="Transparent" 
                    Foreground="{DynamicResource TextSecondaryBrush}"
                    Cursor="Hand"
                    Click="ClearButton_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <!-- 
                                     修改点：
                                     Foreground="Red" -> {DynamicResource DangerHoverBrush}
                                -->
                                <Setter Property="Foreground" Value="{DynamicResource DangerHoverBrush}"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>
    </Border>
</UserControl>
