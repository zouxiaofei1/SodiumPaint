<UserControl x:Class="TabPaint.Controls.ImageBarControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TabPaint.Controls"
             mc:Ignorable="d" 
             x:Name="RootControl"
             d:DesignHeight="100" d:DesignWidth="1000">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Resources/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <local:InverseBooleanToVisibilityConverter x:Key="InverseBoolToVis"/>
            <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        </ResourceDictionary>
    </UserControl.Resources>

    <!-- 增加 PreviewMouseDoubleClick 用于监听背景双击 -->
    <Border x:Name="MainContainer"
        Background="{DynamicResource GlassBackgroundMediumBrush}"
        VerticalAlignment="Top"
        ClipToBounds="False"
        Tag="{Binding ElementName=RootControl}">
        <Border.ContextMenu>
            <ContextMenu Style="{StaticResource Win11ContextMenuStyle}"
                 DataContext="{Binding PlacementTarget.Tag, RelativeSource={RelativeSource Self}}">

                <!-- 内部的 MenuItem 绑定现在可以正常工作了 -->
                <MenuItem Style="{StaticResource Win11MenuItemStyle}"
                  Header="{DynamicResource L_ImgBar_ToggleView}"
                  Click="Internal_OnToggleViewModeClick"/>

                <Separator/>

                <!-- 注意：这里的 IsCompactMode 现在指向的是 RootControl -->
                <MenuItem Header="{DynamicResource L_Menu_QA_Save}"
                  Click="Internal_OnSaveAllClick">
                    <MenuItem.Style>
                        <Style TargetType="MenuItem" BasedOn="{StaticResource Win11MenuItemStyle}">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsCompactMode}" Value="True">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </MenuItem.Style>
                </MenuItem>

                <MenuItem Header="{DynamicResource L_ImgBar_ClearUnedited}"
                      Click="Internal_OnClearUneditedClick">
                    <MenuItem.Style>
                        <Style TargetType="MenuItem" BasedOn="{StaticResource Win11MenuItemStyle}">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsCompactMode}" Value="True">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </MenuItem.Style>
                </MenuItem>

                <MenuItem Header="{DynamicResource L_Menu_QA_DiscardAll}"
                      Foreground="Red"
                      Click="Internal_OnDiscardAllClick">
                    <MenuItem.Style>
                        <Style TargetType="MenuItem" BasedOn="{StaticResource Win11MenuItemStyle}">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsCompactMode}" Value="True">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </MenuItem.Style>
                </MenuItem>
            </ContextMenu>
        </Border.ContextMenu>
        <Border.Style>
            <Style TargetType="Border">
                <Setter Property="Height" Value="5"/>
                <Setter Property="Opacity" Value="1"/>

                <Style.Triggers>
                    <!-- 1. 视图模式隐藏 -->
                    <DataTrigger Binding="{Binding IsViewMode, ElementName=RootControl}" Value="True">
                        <Setter Property="Visibility" Value="Collapsed"/>
                    </DataTrigger>

                    <!-- 2. 普通模式下的强制显示 (非紧凑模式) -->
                    <MultiDataTrigger>
                        <MultiDataTrigger.Conditions>
                            <Condition Binding="{Binding IsViewMode, ElementName=RootControl}" Value="False"/>
                            <Condition Binding="{Binding IsSingleTabMode, ElementName=RootControl}" Value="False"/>
                            <Condition Binding="{Binding IsCompactMode, ElementName=RootControl}" Value="False"/>
                        </MultiDataTrigger.Conditions>
                        <MultiDataTrigger.EnterActions>
                            <BeginStoryboard x:Name="ExpandNormal">
                                <Storyboard>
                                    <!-- 直接写死 To="100" -->
                                    <DoubleAnimation Storyboard.TargetProperty="Height" To="100" Duration="0:0:0.2"/>
                                    <DoubleAnimation Storyboard.TargetProperty="Opacity" To="1" Duration="0:0:0.2"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </MultiDataTrigger.EnterActions>
                    </MultiDataTrigger>

                    <!-- 3. 紧凑模式下的强制显示 -->
                    <MultiDataTrigger>
                        <MultiDataTrigger.Conditions>
                            <Condition Binding="{Binding IsViewMode, ElementName=RootControl}" Value="False"/>
                            <Condition Binding="{Binding IsSingleTabMode, ElementName=RootControl}" Value="False"/>
                            <Condition Binding="{Binding IsCompactMode, ElementName=RootControl}" Value="True"/>
                        </MultiDataTrigger.Conditions>
                        <MultiDataTrigger.EnterActions>
                            <BeginStoryboard x:Name="ExpandCompact">
                                <Storyboard>
                                    <!-- 直接写死 To="45" -->
                                    <DoubleAnimation Storyboard.TargetProperty="Height" To="45" Duration="0:0:0.2"/>
                                    <DoubleAnimation Storyboard.TargetProperty="Opacity" To="1" Duration="0:0:0.2"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </MultiDataTrigger.EnterActions>
                    </MultiDataTrigger>

                    <!-- 4. 视图模式下的悬停展开 (如果是视图模式，通常建议展开成大的，方便预览) -->
                    <MultiDataTrigger>
                        <MultiDataTrigger.Conditions>
                            <Condition Binding="{Binding IsMouseOver, RelativeSource={RelativeSource Self}}" Value="True"/>
                            <Condition Binding="{Binding IsViewMode, ElementName=RootControl}" Value="True"/>
                            <Condition Binding="{Binding IsPinned, ElementName=RootControl}" Value="False"/>
                        </MultiDataTrigger.Conditions>
                        <MultiDataTrigger.EnterActions>
                            <BeginStoryboard>
                                <Storyboard>
                                    <!-- 这里也可以根据 IsCompactMode 分支，但通常看图模式悬停建议弹出大的 -->
                                    <DoubleAnimation Storyboard.TargetProperty="Height" To="95" Duration="0:0:0.2" BeginTime="0:0:0.2"/>
                                    <DoubleAnimation Storyboard.TargetProperty="Opacity" To="1" Duration="0:0:0.2" BeginTime="0:0:0.2"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </MultiDataTrigger.EnterActions>
                        <MultiDataTrigger.ExitActions>
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetProperty="Height" To="5" Duration="0:0:0.2"/>
                                    <DoubleAnimation Storyboard.TargetProperty="Opacity" To="0.01" Duration="0:0:0.2"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </MultiDataTrigger.ExitActions>
                    </MultiDataTrigger>

                    <!-- ... 其他 Trigger (IsSingleTabMode等) 保持原样 ... -->
                </Style.Triggers>
            </Style>
        </Border.Style>


        <Grid x:Name="HitTestLayer"
          Background="Transparent"
          AllowDrop="True"
          Margin="0,-5,0,0"
          ClipToBounds="False"
          PreviewMouseLeftButtonDown="Internal_OnBackgroundMouseLeftButtonDown">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="24" />
            </Grid.ColumnDefinitions>

            <!-- 1. 左侧工具栏：增加了一行 Rows="4" 和一个切换按钮 -->
            <Border Grid.Column="0"
        Margin="4,0,4,0"
        VerticalAlignment="Center"
        BorderBrush="{DynamicResource BorderBrush}"
        BorderThickness="0,0,1,0"
        Padding="0,0,2,0">

                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Visibility" Value="Visible"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsViewMode, ElementName=RootControl}" Value="True">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding IsCompactMode, ElementName=RootControl}" Value="True">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <UniformGrid Columns="1" Rows="4" Height="110" Width="28">
                    <Button ToolTip="{DynamicResource L_Menu_QA_Save}" Click="Internal_OnSaveAllClick" PreviewMouseDoubleClick="Internal_OnSaveAllDoubleClick" Padding ="2" Style="{StaticResource RoundedMenuButtonStyle}" Width="28">
                        <Path Data="{DynamicResource Save_Edit_Image}" Stretch="Uniform" Fill="{DynamicResource IconFillBrush}" Width="16" Height="16"/>
                    </Button>
                    <Button ToolTip="{DynamicResource L_ImgBar_ClearUnedited}" Click="Internal_OnClearUneditedClick" Padding ="2" Style="{StaticResource RoundedMenuButtonStyle}" Width="28">
                        <Path Data="{DynamicResource Clear_Unedited_Image}" Stretch="Uniform" Fill="{DynamicResource IconFillBrush}" Width="16" Height="16"/>
                    </Button>
                    <Button ToolTip="{DynamicResource L_Menu_QA_DiscardAll}" Click="Internal_OnDiscardAllClick" Padding ="2" Style="{StaticResource RoundedMenuButtonStyle}" Width="28">
                        <Path Data="{DynamicResource Reset_Image}" Stretch="Uniform" Fill="{DynamicResource WarningBrush}" Width="16" Height="16"/>
                    </Button>
                    <!-- 新增：切换视图模式按钮 -->
                    <Button ToolTip="{DynamicResource L_ImgBar_ToggleView}" Click="Internal_OnToggleViewModeClick" Padding ="2" Style="{StaticResource RoundedMenuButtonStyle}" Width="28">
                        <Path Data="M3,3 L9,3 L9,9 L3,9 Z M11,3 L17,3 L17,9 L11,9 Z M3,11 L9,11 L9,17 L3,17 Z M11,11 L17,11 L17,17 L11,17 Z" Stretch="Uniform" Fill="{DynamicResource IconFillBrush}" Width="14" Height="14"/>
                    </Button>
                </UniformGrid>
            </Border>

            <!-- 2. 图片标签列表 -->
            <ScrollViewer FocusVisualStyle="{x:Null}" x:Name="FileTabsScroller" Grid.Column="1" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Disabled" PanningMode="HorizontalOnly" 
                          PreviewMouseWheel="Internal_OnFileTabsWheelScroll" 
                          ScrollChanged="Internal_OnFileTabsScrollChanged" 
                          ManipulationBoundaryFeedback="Internal_ScrollViewer_ManipulationBoundaryFeedback">
                <StackPanel Orientation="Horizontal">
                    <!-- 左侧添加按钮 -->
                    <Button Name="LeftAddBtn"
        Click="Internal_OnPrependTabClick"
        ToolTip="{DynamicResource L_ImgBar_NewTabLeft}">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource Win11AddButtonStyle}">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsViewMode, ElementName=RootControl}" Value="True">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding IsCompactMode, ElementName=RootControl}" Value="True">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    <ItemsControl x:Name="FileTabList" ItemsSource="{Binding FileTabs}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <VirtualizingStackPanel Orientation="Horizontal" VirtualizationMode="Recycling"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Background="Transparent" AllowDrop="True" Margin="0,0,0,0" ClipToBounds="False"
                                      Drop="Internal_OnFileTabDrop" 
                                      DragOver="Internal_OnFileTabReorderDragOver"
                                      DragLeave="Internal_OnFileTabDragLeave">

                                    <Button x:Name="TabButton" Margin="2" Padding="4" 
                                            Click="Internal_OnFileTabClick" 
                                            PreviewMouseDown="Internal_OnFileTabPreviewMouseDown" 
                                            PreviewMouseMove="Internal_OnFileTabPreviewMouseMove" 
                                            ToolTip="{Binding FileName}" Tag="{Binding}">

                                        <Button.ContextMenu>
                                            <ContextMenu Style="{StaticResource Win11ContextMenuStyle}" >
                                                <!-- ... 保留原有的 ContextMenu 内容 ... -->
                                                <MenuItem Style="{StaticResource Win11MenuItemStyle}" Header="{DynamicResource L_Menu_Edit_Copy}" Click="Internal_OnTabCopyClick" Tag="{Binding}">
                                                    <MenuItem.Icon>
                                                        <Path Data="{DynamicResource Copy_Image}" Stretch="Uniform" Fill="{DynamicResource IconFillBrush}" Width="16" Height="16"/>
                                                    </MenuItem.Icon>
                                                </MenuItem>
                                                <MenuItem Style="{StaticResource Win11MenuItemStyle}" Header="{DynamicResource L_Menu_Edit_Cut}" Click="Internal_OnTabCutClick" Tag="{Binding}">
                                                    <MenuItem.Icon>
                                                        <Path Data="{DynamicResource Cut_Image}" Stretch="Uniform" Fill="{DynamicResource IconFillBrush}" Width="16" Height="16"/>
                                                    </MenuItem.Icon>
                                                </MenuItem>
                                                <MenuItem Style="{StaticResource Win11MenuItemStyle}" Header="{DynamicResource L_Ctx_DeleteFile}" Click="Internal_OnTabFileDeleteClick" Foreground="Red" Tag="{Binding}">
                                                    <MenuItem.Icon>
                                                        <Path Data="{DynamicResource Delete_Image}" Stretch="Uniform" Fill="{DynamicResource IconFillBrush}" Width="16" Height="16"/>
                                                    </MenuItem.Icon>
                                                </MenuItem>
                                            </ContextMenu>
                                        </Button.ContextMenu>

                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border x:Name="Bd" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="4">
                                                    <ContentPresenter HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Button.Template>

                                        <!-- 核心布局修改 -->
                                        <Grid x:Name="ContentGrid">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="*"/>
                                                <!-- 图片 (Compact模式下隐藏) -->
                                                <RowDefinition Height="Auto"/>
                                                <!-- 文字 -->
                                            </Grid.RowDefinitions>

                                            <!-- 图片 -->
                                            <Image x:Name="ThumbImage" Grid.Row="0" Source="{Binding Thumbnail}" Width="100" Height="60" Stretch="Uniform" VerticalAlignment="Center"/>

                                            <!-- 文字 -->
                                            <TextBlock x:Name="TabLabel" Grid.Row="1" Text="{Binding DisplayName}" FontSize="12" Foreground="{DynamicResource TextPrimaryBrush}" 
                                                       TextAlignment="Center" TextTrimming="CharacterEllipsis" Margin="0,2,0,0"/>

                                            <!-- 编辑状态红点 -->
                                            <Ellipse x:Name="DirtyDot" Width="8" Height="8" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="4,4,0,0" IsHitTestVisible="False" Visibility="Collapsed">
                                                <Ellipse.Fill>
                                                    <SolidColorBrush Color="{DynamicResource DangerBrush}"/>
                                                    <!-- 修正：直接绑定到 Resource -->
                                                </Ellipse.Fill>
                                                <Ellipse.Style>
                                                    <Style TargetType="Ellipse">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsDirty}" Value="True">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Ellipse.Style>
                                            </Ellipse>

                                            <!-- 关闭按钮 (移动到 Grid 内部以便定位) -->
                                            <Button x:Name="CloseBtn" Width="18" Height="18" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,-2,-6,0" 
                                                    Background="{DynamicResource GlassBackgroundHighBrush}" Style="{StaticResource OtherCloseButtonStyle}" BorderThickness="0" 
                                                    Click="Internal_OnFileTabCloseClick" Tag="{Binding}" Visibility="Hidden" Grid.RowSpan="2">
                                                <Button.Resources>
                                                    <Style TargetType="Border">
                                                        <Setter Property="CornerRadius" Value="9"/>
                                                    </Style>
                                                </Button.Resources>
                                                <Path Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" Data="M0,0 L8,8 M8,0 L0,8" StrokeThickness="1.5" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                            </Button>
                                        </Grid>

                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Background" Value="Transparent"/>
                                                <Setter Property="BorderBrush" Value="{DynamicResource BorderMediumBrush}"/>
                                                <Setter Property="BorderThickness" Value="1"/>
                                                <!-- 默认(Expand)模式尺寸 -->
                                                <Setter Property="Width" Value="120"/>
                                                <Setter Property="Height" Value="80"/>

                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="{DynamicResource ListItemHoverBrush}"/>
                                                    </Trigger>
                                                    <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                        <Setter Property="Background" Value="{DynamicResource ListItemSelectedBackgroundBrush}"/>
                                                        <Setter Property="BorderBrush" Value="{DynamicResource ListItemSelectedBorderBrush}"/>
                                                    </DataTrigger>

                                                    <!-- Compact 模式触发器 -->
                                                    <DataTrigger Binding="{Binding IsCompactMode, ElementName=RootControl}" Value="True">
                                                        <Setter Property="Width" Value="150"/>
                                                        <!-- 稍微宽一点以容纳长文件名 -->
                                                        <Setter Property="Height" Value="32"/>
                                                        <Setter Property="Padding" Value="8,0,8,0"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>

                                    <!-- 插入线 -->
                                    <Border x:Name="InsertLine" Width="1" HorizontalAlignment="Left" VerticalAlignment="Stretch" 
                                            Background="{DynamicResource BorderBrush}" Visibility="Collapsed" IsHitTestVisible="False" Margin="0,5,0,5" Padding="0,0,2,0" CornerRadius="2"/>

                                </Grid>

                                <DataTemplate.Triggers>
                                    <!-- 鼠标悬浮显示关闭按钮 -->
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="CloseBtn" Property="Visibility" Value="Visible"/>
                                    </Trigger>

                                    <!-- Compact 模式下的内部元素布局调整 -->
                                    <DataTrigger Binding="{Binding IsCompactMode, ElementName=RootControl}" Value="True">
                                        <!-- 隐藏图片 -->
                                        <Setter TargetName="ThumbImage" Property="Visibility" Value="Collapsed"/>

                                        <!-- 调整文字布局 -->
                                        <Setter TargetName="TabLabel" Property="Grid.Row" Value="0"/>
                                        <Setter TargetName="TabLabel" Property="Grid.RowSpan" Value="2"/>
                                        <Setter TargetName="TabLabel" Property="HorizontalAlignment" Value="Left"/>
                                        <Setter TargetName="TabLabel" Property="TextAlignment" Value="Left"/>
                                        <Setter TargetName="TabLabel" Property="Margin" Value="14,0,20,0"/>
                                        <!-- 左侧留给红点，右侧留给X -->
                                        <Setter TargetName="TabLabel" Property="VerticalAlignment" Value="Center"/>

                                        <!-- 调整红点位置 -->
                                        <Setter TargetName="DirtyDot" Property="Margin" Value="2,0,0,0"/>
                                        <Setter TargetName="DirtyDot" Property="VerticalAlignment" Value="Center"/>

                                        <!-- 调整关闭按钮位置 -->
                                        <Setter TargetName="CloseBtn" Property="VerticalAlignment" Value="Center"/>
                                        <Setter TargetName="CloseBtn" Property="Margin" Value="0,0,2,0"/>
                                        <!-- 在Compact模式下，选中或悬浮都显示关闭按钮，体验更好 -->
                                    </DataTrigger>
                                </DataTemplate.Triggers>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- 新建按钮 -->
                    <Button x:Name="NewTabBtn"
        Click="Internal_OnNewTabClick"
        ToolTip="{DynamicResource L_Menu_QA_NewTab}">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource Win11AddButtonStyle}">
                                <Setter Property="Height" Value="80"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsViewMode, ElementName=RootControl}" Value="True">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding IsCompactMode, ElementName=RootControl}" Value="True">
                                        <Setter Property="Height" Value="32"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </ScrollViewer>

            <!-- 3. 预览滑块 -->
            <Slider Grid.Column="2" x:Name="PreviewSlider" Orientation="Vertical" Minimum="0" Maximum="100" Width="24" Margin="0,4,4,4" IsDirectionReversed="True" IsMoveToPointEnabled="True" 
                    ValueChanged="Internal_PreviewSlider_ValueChanged"  
                    PreviewMouseWheel="Internal_Slider_PreviewMouseWheel">
                <!-- 省略 Slider Template，保持原样 -->
                <Slider.Template>
                    <ControlTemplate TargetType="Slider">
                        <!-- 这里原样保留你提供的 Slider Template 代码 -->
                        <Grid Background="Transparent" x:Name="RootGrid">
                            <Border Width="4" CornerRadius="2" Background="{DynamicResource TextControlBrush}" Opacity="0.1" HorizontalAlignment="Center"/>
                            <Track x:Name="PART_Track" Orientation="Vertical">
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Command="Slider.DecreaseLarge" Style="{StaticResource SliderRepeatButtonStyle}"/>
                                </Track.DecreaseRepeatButton>
                                <Track.Thumb>
                                    <Thumb x:Name="PART_Thumb" Height="16" Width="16" VerticalAlignment="Center">
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Grid>
                                                    <Ellipse Fill="#33000000" Margin="0,2,-1,-2"/>
                                                    <Ellipse x:Name="ThumbDot" Fill="{DynamicResource ToolAccentBrush}" Stroke="{DynamicResource TextInverseBrush}" StrokeThickness="2"/>
                                                </Grid>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsEnabled" Value="False">
                                                        <Setter TargetName="ThumbDot" Value="{DynamicResource TextDisabledBrush}" Property="Fill" />
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Command="Slider.IncreaseLarge" Style="{StaticResource SliderRepeatButtonStyle}"/>
                                </Track.IncreaseRepeatButton>
                            </Track>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="RootGrid" Property="Opacity" Value="0.3"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Slider.Template>
                <Slider.Resources>
                    <Style x:Key="SliderRepeatButtonStyle" TargetType="RepeatButton">
                        <Setter Property="OverridesDefaultStyle" Value="true"/>
                        <Setter Property="IsTabStop" Value="false"/>
                        <Setter Property="Focusable" Value="false"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="RepeatButton">
                                    <Border Background="Transparent"/>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Slider.Resources>
            </Slider>
        </Grid>
    </Border>
</UserControl>
