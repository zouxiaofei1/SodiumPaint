<UserControl x:Class="TabPaint.Controls.SelectionToolBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TabPaint.Controls"
             xmlns:root="clr-namespace:TabPaint"
             xmlns:services="clr-namespace:TabPaint.Services"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="150">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Resources/SubWindowStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
          
        </ResourceDictionary>
    </UserControl.Resources>
    
    <Border Background="{DynamicResource PanelBackgroundBrush}" 
            BorderBrush="{DynamicResource BorderMediumBrush}" 
            BorderThickness="1" 
            CornerRadius="8" 
            Padding="2"
            SnapsToDevicePixels="True">
        <Border.Effect>
            <DropShadowEffect BlurRadius="10" Opacity="0.15" ShadowDepth="2"/>
        </Border.Effect>
        <StackPanel Orientation="Horizontal">
            <Button x:Name="CopyBtn" Style="{StaticResource RoundedMenuButtonStyle}" 
                    services:ShortcutService.BaseToolTip="L_Main_Ctx_Copy"
                    services:ShortcutService.ShortcutKey="Edit.Copy">
                <Path Data="{DynamicResource Copy_Image}" Stretch="Uniform" Fill="{DynamicResource IconFillBrush}" Width="16" Height="16"/>
            </Button>
            <Button x:Name="AiRemoveBgBtn" Style="{StaticResource RoundedMenuButtonStyle}" 
                    services:ShortcutService.BaseToolTip="L_Main_Ctx_AI_RemoveBg"
                    services:ShortcutService.ShortcutKey="Tool.RemoveBg">
                <Path Data="{DynamicResource RemoveBackground_Image}" Stretch="Uniform" Fill="{DynamicResource IconFillBrush}" Width="16" Height="16"/>
            </Button>
            <Button x:Name="OcrBtn" Style="{StaticResource RoundedMenuButtonStyle}" 
                    services:ShortcutService.BaseToolTip="L_Main_Ctx_OCR"
                    services:ShortcutService.ShortcutKey="Tool.OCR">
                <Path Data="{DynamicResource Scan_Text_Image}" Stretch="Uniform" Fill="{DynamicResource IconFillBrush}" Width="16" Height="16"/>
            </Button>
        </StackPanel>
    </Border>
</UserControl>
