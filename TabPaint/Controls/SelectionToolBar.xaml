<UserControl x:Class="TabPaint.Controls.SelectionToolBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TabPaint.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="150">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Resources/SubWindowStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
          
        </ResourceDictionary>
    </UserControl.Resources>
    
    <Border Background="{DynamicResource PanelBackgroundBrush}" 
            BorderBrush="{DynamicResource BorderMediumBrush}" 
            BorderThickness="1" 
            CornerRadius="8" 
            Padding="2"
            SnapsToDevicePixels="True">
        <Border.Effect>
            <DropShadowEffect BlurRadius="10" Opacity="0.15" ShadowDepth="2"/>
        </Border.Effect>
        <StackPanel Orientation="Horizontal">
            <!-- å¤åˆ¶æŒ‰é’® -->
