<UserControl x:Class="TabPaint.Controls.SelectionToolBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TabPaint.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="150">
    <UserControl.Resources>
        <Style x:Key="ToolBarButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="Margin" Value="2,0"/>
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="4"/>
                </Style>
            </Style.Resources>
        </Style>
    </UserControl.Resources>
    
    <Border Background="{DynamicResource PanelBackgroundBrush}" 
            BorderBrush="{DynamicResource BorderMediumBrush}" 
            BorderThickness="1" 
            CornerRadius="8" 
            Padding="4"
            SnapsToDevicePixels="True">
        <Border.Effect>
            <DropShadowEffect BlurRadius="10" Opacity="0.15" ShadowDepth="2"/>
        </Border.Effect>
        <StackPanel Orientation="Horizontal">
            <!-- å¤åˆ¶æŒ‰é’® -->
            <Button x:Name="CopyBtn" Style="{StaticResource ToolBarButtonStyle}" ToolTip="{DynamicResource L_Main_Ctx_Copy}">
                <Path Data="{DynamicResource Copy_Image}" Stretch="Uniform" Fill="{DynamicResource IconFillBrush}"/>
            </Button>
            
            <!-- AIæŠ å›¾æŒ‰é’® (ç§»é™¤èƒŒæ™¯) -->
            <Button x:Name="AiRemoveBgBtn" Style="{StaticResource ToolBarButtonStyle}" ToolTip="{DynamicResource L_Main_Ctx_AI_RemoveBg}">
                <Path Data="{DynamicResource RemoveBackground_Image}" Stretch="Uniform" Fill="{DynamicResource IconFillBrush}"/>
            </Button>
            
            <!-- OCRæŒ‰é’® -->
            <Button x:Name="OcrBtn" Style="{StaticResource ToolBarButtonStyle}" ToolTip="{DynamicResource L_Main_Ctx_OCR}">
                <TextBlock Text="ðŸ…°ï¸" FontFamily="Segoe UI Emoji" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="14" Foreground="{DynamicResource TextPrimaryBrush}"/>
            </Button>
        </StackPanel>
    </Border>
</UserControl>
