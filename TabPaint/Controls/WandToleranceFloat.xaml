<UserControl x:Class="TabPaint.Controls.WandToleranceFloat"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TabPaint.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="360"
             Visibility="Collapsed"
             MouseDown="UserControl_MouseDown">

    <Border CornerRadius="12" 
            Background="{DynamicResource PanelBackgroundBrush}" 
            BorderBrush="{DynamicResource BorderLightBrush}" 
            BorderThickness="1"
            Width="340"
            Padding="12,8">
        <Border.Effect>
            <DropShadowEffect BlurRadius="15" ShadowDepth="4" Opacity="0.1" Direction="270"/>
        </Border.Effect>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="80"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" 
                       Text="{DynamicResource L_Tool_MagicWand_Tolerance}" 
                       FontSize="12" 
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource TextPrimaryBrush}"
                       VerticalAlignment="Center"
                       Margin="0,0,10,0"/>

            <Slider Grid.Column="1" 
                    x:Name="ToleranceSlider"
                    Style="{DynamicResource Win11HorizontalSliderStyle}"
                    Minimum="0" Maximum="255"
                    Value="20"
                    VerticalAlignment="Center"
                    IsSnapToTickEnabled="True" TickFrequency="1"
                    Margin="0,0,10,0"
                    ValueChanged="ToleranceSlider_ValueChanged"/>

            <ComboBox Grid.Column="2" 
                      x:Name="ToleranceCombo" 
                      Style="{DynamicResource FluentComboBoxStyle}"
                      IsEditable="True"
                      FontSize="12"
                      Height="28"
                      VerticalAlignment="Center">
                <ComboBoxItem Content="0"/>
                <ComboBoxItem Content="10"/>
                <ComboBoxItem Content="20"/>
                <ComboBoxItem Content="32"/>
                <ComboBoxItem Content="50"/>
                <ComboBoxItem Content="80"/>
                <ComboBoxItem Content="100"/>
                <ComboBoxItem Content="150"/>
                <ComboBoxItem Content="255"/>
            </ComboBox>
        </Grid>
    </Border>
</UserControl>
